<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.cafe.controller.admin.PromotionController" spacing="10" style="-fx-background-color: #f5d6ae;" alignment="TOP_CENTER">
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Quản lý Khuyến mãi" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #4e342e;" />
        <Region HBox.hgrow="ALWAYS"/>
        <TextField fx:id="searchField" promptText="Tìm kiếm..." />
        <Button text="Tìm" onAction="#handleSearch" />
    </HBox>
    <TableView fx:id="promotionTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="nameColumn" text="Tên khuyến mãi" prefWidth="200" />
            <TableColumn fx:id="discountColumn" text="Giảm giá" prefWidth="100" />
        </columns>
    </TableView>
    <HBox spacing="10" alignment="CENTER">
        <Button fx:id="addButton" text="Thêm" onAction="#handleAdd" />
        <Button fx:id="editButton" text="Sửa" onAction="#handleEdit" />
        <Button fx:id="deleteButton" text="Xóa" onAction="#handleDelete" />
    </HBox>
</VBox>



