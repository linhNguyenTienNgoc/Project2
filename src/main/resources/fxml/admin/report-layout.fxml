<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.chart.*?>

<BorderPane xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.cafe.controller.admin.ReportController"
            stylesheets="@../../css/admin-theme.css,@../../css/report.css">
    
    <!-- Top: ToolBar với bộ lọc thời gian -->
    <top>
        <ToolBar styleClass="report-toolbar">
            <padding>
                <Insets top="15" right="15" bottom="15" left="15"/>
            </padding>
            
            <Label text="📊 Báo cáo thống kê" styleClass="report-title"/>
            <Region HBox.hgrow="ALWAYS"/>
            
            <Label text="Từ ngày:" styleClass="date-label"/>
            <DatePicker fx:id="startDatePicker" styleClass="date-picker" prefWidth="150"/>
            
            <Label text="Đến ngày:" styleClass="date-label"/>
            <DatePicker fx:id="endDatePicker" styleClass="date-picker" prefWidth="150"/>
            
            <Button fx:id="filterButton" text="🔍 Lọc" styleClass="filter-button" 
                    onAction="#handleFilterAction"/>
        </ToolBar>
    </top>
    
    <!-- Center: Biểu đồ và bảng -->
    <center>
        <VBox spacing="20" styleClass="content-container">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
            
            <!-- Hàng 1: Biểu đồ cột doanh thu theo ngày -->
            <VBox spacing="10" styleClass="chart-container">
                <Label text="📈 Doanh thu theo ngày" styleClass="chart-title"/>
                <BarChart fx:id="dailyRevenueChart" prefHeight="300" styleClass="revenue-chart">
                    <xAxis>
                        <CategoryAxis fx:id="revenueXAxis" label="Ngày"/>
                    </xAxis>
                    <yAxis>
                        <NumberAxis fx:id="revenueYAxis" label="Doanh thu (VNĐ)"/>
                    </yAxis>
                </BarChart>
            </VBox>
            
            <!-- Hàng 2: HBox chứa 2 biểu đồ -->
            <HBox spacing="20" prefHeight="300">
                <!-- Biểu đồ tròn - Tỷ lệ doanh thu theo danh mục -->
                <VBox spacing="10" styleClass="chart-container" HBox.hgrow="ALWAYS">
                    <Label text="🍰 Doanh thu theo danh mục" styleClass="chart-title"/>
                    <PieChart fx:id="categoryPieChart" prefHeight="280" styleClass="category-chart"/>
                </VBox>
                
                <!-- Biểu đồ đường - So sánh doanh thu tháng này vs tháng trước -->
                <VBox spacing="10" styleClass="chart-container" HBox.hgrow="ALWAYS">
                    <Label text="📊 So sánh doanh thu tháng" styleClass="chart-title"/>
                    <LineChart fx:id="monthlyComparisonChart" prefHeight="280" styleClass="comparison-chart">
                        <xAxis>
                            <CategoryAxis fx:id="comparisonXAxis" label="Tháng"/>
                        </xAxis>
                        <yAxis>
                            <NumberAxis fx:id="comparisonYAxis" label="Doanh thu (VNĐ)"/>
                        </yAxis>
                    </LineChart>
                </VBox>
            </HBox>
        </VBox>
    </center>
    
    <!-- Bottom: TableView chi tiết báo cáo -->
    <bottom>
        <VBox spacing="10" styleClass="table-container">
            <padding>
                <Insets top="0" right="20" bottom="20" left="20"/>
            </padding>
            
            <Label text="📋 Chi tiết báo cáo" styleClass="table-title"/>
            <TableView fx:id="reportDetailTable" styleClass="report-table" prefHeight="250">
                <columns>
                    <TableColumn fx:id="dateColumn" text="Ngày" prefWidth="120" styleClass="date-column"/>
                    <TableColumn fx:id="orderCountColumn" text="Tổng số đơn hàng" prefWidth="150" styleClass="number-column"/>
                    <TableColumn fx:id="revenueColumn" text="Doanh thu (VNĐ)" prefWidth="180" styleClass="currency-column"/>
                    <TableColumn fx:id="customerCountColumn" text="Số khách hàng phục vụ" prefWidth="180" styleClass="number-column"/>
                </columns>
            </TableView>
        </VBox>
    </bottom>
    
</BorderPane>