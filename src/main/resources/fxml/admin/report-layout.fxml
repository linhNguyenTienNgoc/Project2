<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.cafe.controller.report.ReportController"
      style="-fx-background-color: #f5d6ae;" spacing="0">

    <HBox style="-fx-background-color: #5d2b1c; -fx-padding: 10;" alignment="CENTER_LEFT" spacing="20">
        <Label text="Báo cáo doanh thu"
               style="-fx-text-fill: #fff9c4; -fx-font-size: 18px; -fx-font-weight: bold;" />
        <Region HBox.hgrow="ALWAYS" />
        <Button fx:id="logoutButton" style="-fx-background-color: transparent; -fx-text-fill: #fff9c4;">
            <graphic>
                <ImageView fitHeight="20" fitWidth="20">
                    <image>
                        <Image url="@../../images/icons/power-icon.png" />
                    </image>
                </ImageView>
            </graphic>
        </Button>
    </HBox>

    <VBox style="-fx-background-color: #f8f9fa;" VBox.vgrow="ALWAYS" spacing="10" alignment="CENTER">
        <Label text="Biểu đồ / bảng báo cáo sẽ hiển thị ở đây"
               style="-fx-font-size: 16px; -fx-text-fill: #4e342e;"/>
    </VBox>
</VBox>
