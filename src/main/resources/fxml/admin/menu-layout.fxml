<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<!-- *** FIXED: Removed problematic USE_COMPUTED_SIZE values *** -->
<BorderPane xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.cafe.controller.admin.AdminMenuController"
            stylesheets="@../../css/menu-style.css"
            styleClass="root-container"
            minHeight="600" prefHeight="800">

    <!-- Top Navigation Bar -->
    <top>
        <HBox styleClass="top-navbar" alignment="CENTER_LEFT" spacing="20">
            <Label text="🍽️ Quản lý Menu Café" styleClass="page-title" />
            
            <Region HBox.hgrow="ALWAYS" />
            
            <!-- Search Bar -->
            <HBox spacing="10" alignment="CENTER_LEFT" styleClass="search-container">
                <Label text="🔍" styleClass="search-icon"/>
                <TextField fx:id="searchField" promptText="Tìm kiếm món ăn..." 
                          styleClass="search-field" prefWidth="250"/>
                <Button fx:id="refreshButton" text="🔄" styleClass="icon-button refresh-btn" />
            </HBox>
            
            <Button fx:id="logoutButton" styleClass="logout-button">
                <graphic>
                    <ImageView fitHeight="20" fitWidth="20">
                        <image>
                            <Image url="@../../images/icons/power-icon.png" />
                        </image>
                    </ImageView>
                </graphic>
            </Button>
        </HBox>
    </top>

    <!-- *** FIXED: Main Content - Use proper sizing *** -->
    <center>
        <HBox spacing="0" styleClass="main-content">
            
            <!-- *** FIXED: Left Panel - Proper sizing *** -->
            <VBox styleClass="left-panel" HBox.hgrow="ALWAYS">
                
                <!-- Toolbar - Fixed Height -->
                <HBox styleClass="toolbar" spacing="10" alignment="CENTER_LEFT">
                    <Button fx:id="addProductButton" text="➕ Thêm món mới" styleClass="primary-button"/>
                    <Button fx:id="editProductButton" text="✏️ Sửa món" styleClass="secondary-button"/>
                    <Button fx:id="deleteProductButton" text="🗑️ Xóa món" styleClass="danger-button"/>
                    
                    <Region HBox.hgrow="ALWAYS"/>
                    
                    <!-- Category Filter -->
                    <Label text="Danh mục:" styleClass="filter-label"/>
                    <ComboBox fx:id="categoryFilter" promptText="Tất cả" 
                             styleClass="category-filter" prefWidth="150"/>
                    
                    <!-- Status Filter -->
                    <Label text="Trạng thái:" styleClass="filter-label"/>
                    <ComboBox fx:id="statusFilter" promptText="Tất cả" 
                             styleClass="status-filter" prefWidth="120"/>
                </HBox>
                
                <!-- *** FIXED: Products Table - Proper sizing *** -->
                <TableView fx:id="productsTable" styleClass="responsive-products-table" 
                           VBox.vgrow="ALWAYS">
                    <columns>
                        <!-- *** FIXED: No prefWidth specified - Let Java handle sizing *** -->
                        <TableColumn fx:id="productIdColumn" text="Mã SP" styleClass="id-column"/>
                        <TableColumn fx:id="productNameColumn" text="Tên món" styleClass="name-column"/>
                        <TableColumn fx:id="categoryNameColumn" text="Loại" styleClass="category-column"/>
                        <TableColumn fx:id="sellingPriceColumn" text="Giá bán" styleClass="price-column"/>
                        <TableColumn fx:id="costPriceColumn" text="Giá vốn" styleClass="price-column"/>
                        <TableColumn fx:id="statusColumn" text="Trạng thái" styleClass="status-column"/>
                    </columns>
                    
                    <!-- *** PLACEHOLDER for empty table *** -->
                    <placeholder>
                        <VBox spacing="15" alignment="CENTER" styleClass="table-placeholder">
                            <Label text="🍽️" styleClass="placeholder-icon"/>
                            <Label text="Chưa có món ăn nào trong menu" styleClass="placeholder-title"/>
                            <Label text="Nhấn 'Thêm món mới' để bắt đầu xây dựng menu" styleClass="placeholder-subtitle"/>
                            <Button text="➕ Thêm món đầu tiên" styleClass="primary-button"/>
                        </VBox>
                    </placeholder>
                </TableView>
                
                <!-- Table Footer Info - Fixed Height -->
                <HBox styleClass="table-footer" alignment="CENTER_LEFT" spacing="15">
                    <Label fx:id="totalProductsLabel" text="Tổng: 0 món" styleClass="info-label"/>
                    <Label fx:id="activeProductsLabel" text="Đang bán: 0 món" styleClass="info-label"/>
                    <Label fx:id="inactiveProductsLabel" text="Ngừng bán: 0 món" styleClass="info-label"/>
                    
                    <Region HBox.hgrow="ALWAYS"/>
                    
                    <!-- Pagination -->
                    <HBox spacing="5" alignment="CENTER">
                        <Button fx:id="previousPageButton" text="◀" styleClass="pagination-button"/>
                        <Label fx:id="pageInfoLabel" text="Trang 1/1" styleClass="page-info"/>
                        <Button fx:id="nextPageButton" text="▶" styleClass="pagination-button"/>
                    </HBox>
                </HBox>
                
            </VBox>
            
            <!-- *** FIXED: Right Panel - Proper sizing *** -->
            <VBox styleClass="right-panel" prefWidth="280" minWidth="250" maxWidth="350">
                
                <!-- Fixed Height Title -->
                <Label text="📋 Thông tin sản phẩm" styleClass="panel-title"/>
                
                <!-- *** FIXED: Product Preview - Proper sizing *** -->
                <VBox styleClass="product-preview" spacing="12" VBox.vgrow="ALWAYS">
                    
                    <!-- Product Image - Fixed Size -->
                    <VBox styleClass="image-container" alignment="CENTER">
                        <ImageView fx:id="productImageView" fitHeight="150" fitWidth="200" 
                                  preserveRatio="true" styleClass="product-image">
                            <image>
                                <Image url="@../../images/no-image.png"/>
                            </image>
                        </ImageView>
                        <Button fx:id="changeImageButton" text="📷 Đổi ảnh" styleClass="image-button"/>
                    </VBox>
                    
                    <!-- Product Details - Flexible -->
                    <VBox styleClass="product-details" spacing="10" VBox.vgrow="ALWAYS">
                        
                        <VBox spacing="4">
                            <Label text="Tên món:" styleClass="detail-label"/>
                            <Label fx:id="previewProductName" text="Chưa chọn sản phẩm" 
                                  styleClass="detail-value name-value"/>
                        </VBox>
                        
                        <HBox spacing="12">
                            <VBox spacing="4" HBox.hgrow="ALWAYS">
                                <Label text="Mã SP:" styleClass="detail-label"/>
                                <Label fx:id="previewProductId" text="-" styleClass="detail-value"/>
                            </VBox>
                            <VBox spacing="4" HBox.hgrow="ALWAYS">
                                <Label text="Danh mục:" styleClass="detail-label"/>
                                <Label fx:id="previewCategory" text="-" styleClass="detail-value"/>
                            </VBox>
                        </HBox>
                        
                        <HBox spacing="12">
                            <VBox spacing="4" HBox.hgrow="ALWAYS">
                                <Label text="Giá bán:" styleClass="detail-label"/>
                                <Label fx:id="previewSellingPrice" text="-" 
                                      styleClass="detail-value price-value"/>
                            </VBox>
                            <VBox spacing="4" HBox.hgrow="ALWAYS">
                                <Label text="Giá vốn:" styleClass="detail-label"/>
                                <Label fx:id="previewCostPrice" text="-" 
                                      styleClass="detail-value price-value"/>
                            </VBox>
                        </HBox>
                        
                        <VBox spacing="4">
                            <Label text="Trạng thái:" styleClass="detail-label"/>
                            <Label fx:id="previewStatus" text="-" styleClass="detail-value status-value"/>
                        </VBox>
                        
                        <!-- Description - Expandable -->
                        <VBox spacing="4" VBox.vgrow="ALWAYS">
                            <Label text="Mô tả:" styleClass="detail-label"/>
                            <TextArea fx:id="previewDescription" text="Chưa có mô tả" 
                                     styleClass="detail-description" 
                                     editable="false" wrapText="true"
                                     VBox.vgrow="ALWAYS"
                                     minHeight="80" prefHeight="120"/>
                        </VBox>
                        
                        <VBox spacing="4">
                            <Label text="Ngày tạo:" styleClass="detail-label"/>
                            <Label fx:id="previewCreatedDate" text="-" styleClass="detail-value"/>
                        </VBox>
                        
                    </VBox>
                    
                    <!-- Quick Actions - Fixed at Bottom -->
                    <VBox styleClass="quick-actions" spacing="6">
                        <Button fx:id="quickEditButton" text="✏️ Chỉnh sửa nhanh" 
                               styleClass="secondary-button" maxWidth="Infinity"/>
                        <Button fx:id="toggleStatusButton" text="🔄 Đổi trạng thái" 
                               styleClass="status-toggle-button" maxWidth="Infinity"/>
                        <Button fx:id="duplicateProductButton" text="📋 Nhân bản" 
                               styleClass="outline-button" maxWidth="Infinity"/>
                    </VBox>
                    
                </VBox>
                
            </VBox>
            
        </HBox>
    </center>

    <!-- Add/Edit Product Dialog (Initially Hidden) -->
    <fx:define>
        <VBox fx:id="productFormDialog" styleClass="product-form-dialog" 
              visible="false" managed="false" alignment="TOP_CENTER">
            
            <HBox styleClass="dialog-header" alignment="CENTER_LEFT">
                <Label fx:id="dialogTitle" text="➕ Thêm món mới" styleClass="dialog-title"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Button fx:id="closeDialogButton" text="✕" styleClass="close-button"/>
            </HBox>
            
            <ScrollPane styleClass="dialog-content" fitToWidth="true" fitToHeight="true">
                <VBox spacing="20" styleClass="form-container">
                    
                    <!-- Basic Information -->
                    <VBox styleClass="form-section" spacing="15">
                        <Label text="📝 Thông tin cơ bản" styleClass="section-title"/>
                        
                        <HBox spacing="15">
                            <VBox spacing="8" HBox.hgrow="ALWAYS">
                                <Label text="Tên món *" styleClass="form-label"/>
                                <TextField fx:id="productNameField" promptText="Nhập tên món ăn..." 
                                          styleClass="form-field"/>
                            </VBox>
                            <VBox spacing="8" prefWidth="150">
                                <Label text="Danh mục *" styleClass="form-label"/>
                                <ComboBox fx:id="categoryComboBox" promptText="Chọn danh mục" 
                                         styleClass="form-combobox" prefWidth="150"/>
                            </VBox>
                        </HBox>
                        
                        <VBox spacing="8">
                            <Label text="Mô tả" styleClass="form-label"/>
                            <TextArea fx:id="descriptionField" promptText="Mô tả về món ăn..." 
                                     styleClass="form-textarea" prefRowCount="3" wrapText="true"/>
                        </VBox>
                        
                    </VBox>
                    
                    <!-- Pricing Information -->
                    <VBox styleClass="form-section" spacing="15">
                        <Label text="💰 Thông tin giá cả" styleClass="section-title"/>
                        
                        <HBox spacing="15">
                            <VBox spacing="8" HBox.hgrow="ALWAYS">
                                <Label text="Giá bán *" styleClass="form-label"/>
                                <TextField fx:id="sellingPriceField" promptText="0" 
                                          styleClass="form-field price-field"/>
                            </VBox>
                            <VBox spacing="8" HBox.hgrow="ALWAYS">
                                <Label text="Giá vốn" styleClass="form-label"/>
                                <TextField fx:id="costPriceField" promptText="0" 
                                          styleClass="form-field price-field"/>
                            </VBox>
                        </HBox>
                        
                    </VBox>
                    
                    <!-- Image Information -->
                    <VBox styleClass="form-section" spacing="15">
                        <Label text="🖼️ Hình ảnh sản phẩm" styleClass="section-title"/>
                        
                        <HBox spacing="15" alignment="CENTER_LEFT">
                            <VBox alignment="CENTER" spacing="10">
                                <ImageView fx:id="formProductImageView" fitHeight="120" fitWidth="120" 
                                          preserveRatio="true" styleClass="form-image-preview">
                                    <image>
                                        <Image url="@../../images/no-image.png"/>
                                    </image>
                                </ImageView>
                                <Button fx:id="selectImageButton" text="📁 Chọn ảnh" 
                                       styleClass="outline-button"/>
                            </VBox>
                            
                            <VBox spacing="8" HBox.hgrow="ALWAYS">
                                <Label text="URL ảnh" styleClass="form-label"/>
                                <TextField fx:id="imageUrlField" promptText="https://..." 
                                          styleClass="form-field"/>
                                <Label text="💡 Bạn có thể nhập URL ảnh hoặc chọn file từ máy tính" 
                                      styleClass="form-hint"/>
                            </VBox>
                        </HBox>
                        
                    </VBox>
                    
                    <!-- Status -->
                    <VBox styleClass="form-section" spacing="15">
                        <Label text="⚙️ Cài đặt" styleClass="section-title"/>
                        
                        <HBox spacing="15" alignment="CENTER_LEFT">
                            <CheckBox fx:id="isAvailableCheckBox" text="Sản phẩm đang bán" 
                                     styleClass="form-checkbox" selected="true"/>
                        </HBox>
                        
                    </VBox>
                    
                </VBox>
            </ScrollPane>
            
            <!-- Dialog Footer -->
            <HBox styleClass="dialog-footer" spacing="10" alignment="CENTER_RIGHT">
                <Button fx:id="cancelFormButton" text="❌ Hủy" styleClass="outline-button"/>
                <Button fx:id="resetFormButton" text="🔄 Đặt lại" styleClass="secondary-button"/>
                <Button fx:id="saveProductButton" text="💾 Lưu" styleClass="primary-button"/>
            </HBox>
            
        </VBox>
    </fx:define>

</BorderPane>