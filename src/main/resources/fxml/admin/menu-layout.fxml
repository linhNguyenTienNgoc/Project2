<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.cafe.controller.admin.AdminMenuController"
      style="-fx-background-color: #f5d6ae;" spacing="0">

    <!-- Top Navigation Bar -->
    <HBox style="-fx-background-color: #5d2b1c; -fx-padding: 10;" alignment="CENTER_LEFT" spacing="20">
        <Label text="Quản lý Menu"
               style="-fx-text-fill: #fff9c4; -fx-font-size: 18px; -fx-font-weight: bold;" />

        <Region HBox.hgrow="ALWAYS" />

        <Region HBox.hgrow="ALWAYS" />

        <Button fx:id="logoutButton"
                style="-fx-background-color: transparent; -fx-text-fill: #fff9c4;">
            <graphic>
                <ImageView fitHeight="20" fitWidth="20">
                    <image>
                        <Image url="@../../images/icons/power-icon.png" />
                    </image>
                </ImageView>
            </graphic>
        </Button>
    </HBox>

    <!-- Main Content Area -->
    <VBox style="-fx-background-color: #f8f9fa;" VBox.vgrow="ALWAYS" spacing="0">

        <!-- Search and Filter Bar -->
        <HBox style="-fx-background-color: white; -fx-padding: 15; -fx-border-color: #dee2e6; -fx-border-width: 0 0 1 0;" alignment="CENTER_LEFT" spacing="15">
            <Label text="🔍 Tìm kiếm:" style="-fx-font-weight: bold; -fx-text-fill: #333;"/>
            <TextField fx:id="searchField" promptText="Tìm theo tên món..." prefWidth="200" prefHeight="32"/>
            <ComboBox fx:id="categoryFilter" promptText="Chọn danh mục" prefWidth="150" prefHeight="32"/>
            <Button fx:id="refreshButton" text="🔄 Refresh" style="-fx-background-color: #007bff; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;" prefHeight="32"/>
            
            <Region HBox.hgrow="ALWAYS"/>
            
            <!-- Quick Actions -->
            <Button fx:id="manageCategoriesButton" text="📂 Quản lý danh mục" 
                    style="-fx-background-color: #17a2b8; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;" prefHeight="32"/>
            <Button fx:id="importMenuButton" text="📥 Nhập menu" 
                    style="-fx-background-color: #28a745; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;" prefHeight="32"/>
            <Button fx:id="exportMenuButton" text="📤 Xuất menu" 
                    style="-fx-background-color: #ffc107; -fx-text-fill: #333; -fx-font-weight: bold; -fx-background-radius: 5;" prefHeight="32"/>
            
            <!-- Bulk Actions -->
            <MenuButton fx:id="bulkMenuActionsButton" text="🔧 Thao tác hàng loạt" 
                        style="-fx-background-color: #6c757d; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;" prefHeight="32">
                <items>
                    <MenuItem fx:id="bulkActivateProductsMenuItem" text="✅ Kích hoạt đã chọn"/>
                    <MenuItem fx:id="bulkDeactivateProductsMenuItem" text="❌ Vô hiệu hóa đã chọn"/>
                    <MenuItem fx:id="bulkDeleteProductsMenuItem" text="🗑️ Xóa đã chọn"/>
                    <MenuItem fx:id="bulkUpdatePriceMenuItem" text="💰 Cập nhật giá hàng loạt"/>
                    <MenuItem fx:id="bulkChangeCategoryMenuItem" text="📂 Đổi danh mục hàng loạt"/>
                </items>
            </MenuButton>
        </HBox>

        <TableView fx:id="menuTable" VBox.vgrow="ALWAYS" style="-fx-background-color: white;">
            <columns>
                <TableColumn fx:id="selectProductColumn" text="☑️" prefWidth="40"/>
                <TableColumn fx:id="productIdColumn" text="Mã món" prefWidth="100"/>
                <TableColumn fx:id="productNameColumn" text="Tên món" prefWidth="180"/>
                <TableColumn fx:id="categoryColumn" text="Danh mục" prefWidth="120"/>
                <TableColumn fx:id="priceColumn" text="Giá (VND)" prefWidth="120"/>
                <TableColumn fx:id="stockColumn" text="Tồn kho" prefWidth="100"/>
                <TableColumn fx:id="statusColumn" text="Trạng thái" prefWidth="100"/>
                <TableColumn fx:id="actionColumn" text="Thao tác" prefWidth="200"/>
            </columns>
        </TableView>

        <!-- Add/Edit Form -->
        <VBox style="-fx-background-color: #f8f9fa; -fx-padding: 15; -fx-border-color: #dee2e6; -fx-border-width: 1 0 0 0;" spacing="10">
            <Label text="📝 Thêm/Sửa món ăn" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #333;"/>
            
            <HBox spacing="10" alignment="CENTER_LEFT">
                <VBox spacing="5">
                    <Label text="Tên món:" style="-fx-font-weight: bold; -fx-text-fill: #555;"/>
                    <TextField fx:id="productNameField" promptText="Nhập tên món..." prefWidth="200" prefHeight="36"/>
                </VBox>
                
                <VBox spacing="5">
                    <Label text="Danh mục:" style="-fx-font-weight: bold; -fx-text-fill: #555;"/>
                    <ComboBox fx:id="categoryCombo" promptText="Chọn danh mục" prefWidth="150" prefHeight="36"/>
                </VBox>
                
                <VBox spacing="5">
                    <Label text="Giá (VND):" style="-fx-font-weight: bold; -fx-text-fill: #555;"/>
                    <TextField fx:id="priceField" promptText="0" prefWidth="120" prefHeight="36"/>
                </VBox>
                
                <VBox spacing="5">
                    <Label text="Mô tả:" style="-fx-font-weight: bold; -fx-text-fill: #555;"/>
                    <TextField fx:id="descriptionField" promptText="Mô tả món ăn..." prefWidth="200" prefHeight="36"/>
                </VBox>
            </HBox>
            
            <!-- Action Buttons - Split into 2 rows to avoid overflow -->
            <VBox spacing="8">
                <!-- Primary Actions Row -->
                <HBox spacing="8" alignment="CENTER_LEFT">
                    <Button fx:id="addButton" text="➕ Thêm" 
                            style="-fx-background-color: #28a745; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5; -fx-font-size: 12px;" 
                            prefHeight="32" prefWidth="80"/>
                    <Button fx:id="updateButton" text="✏️ Cập nhật" 
                            style="-fx-background-color: #ffc107; -fx-text-fill: #333; -fx-font-weight: bold; -fx-background-radius: 5; -fx-font-size: 12px;" 
                            prefHeight="32" prefWidth="80"/>
                    <Button fx:id="deleteButton" text="🗑️ Xóa" 
                            style="-fx-background-color: #dc3545; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5; -fx-font-size: 12px;" 
                            prefHeight="32" prefWidth="80"/>
                    <Button fx:id="duplicateButton" text="📋 Nhân bản" 
                            style="-fx-background-color: #17a2b8; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5; -fx-font-size: 12px;" 
                            prefHeight="32" prefWidth="80"/>
                    <Button fx:id="clearButton" text="🧹 Xóa form" 
                            style="-fx-background-color: #6c757d; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5; -fx-font-size: 12px;" 
                            prefHeight="32" prefWidth="80"/>
                </HBox>
                
                <!-- Secondary Actions Row -->
                <HBox spacing="8" alignment="CENTER_LEFT">
                    <Button fx:id="previewButton" text="👁️ Xem trước" 
                            style="-fx-background-color: #6f42c1; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5; -fx-font-size: 12px;" 
                            prefHeight="32" prefWidth="100"/>
                    <Button fx:id="saveAndAddAnotherButton" text="💾 Lưu &amp; Thêm tiếp" 
                            style="-fx-background-color: #20c997; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5; -fx-font-size: 12px;" 
                            prefHeight="32" prefWidth="140"/>
                    
                    <Region HBox.hgrow="ALWAYS"/>
                    
                    <Label text="💡 Tip: Dùng Ctrl+S để lưu nhanh" 
                           style="-fx-text-fill: #666; -fx-font-size: 11px; -fx-font-style: italic;"/>
                </HBox>
            </VBox>
        </VBox>
    </VBox>
</VBox>
