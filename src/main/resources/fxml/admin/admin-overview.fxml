<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.chart.*?>

<VBox xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.cafe.controller.admin.AdminOverviewController"
      styleClass="main-content" spacing="20">
    
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- Welcome Header -->
    <VBox spacing="10">
        <Label text="👋 Chào mừng đến với Admin Dashboard" 
               styleClass="dashboard-title"/>
        <Label fx:id="welcomeMessage" text="Hôm nay là ngày tốt để quản lý cafe!"
               styleClass="date-label"/>
    </VBox>

    <!-- Statistics Cards -->
    <HBox spacing="20" alignment="CENTER">
        <!-- Today Revenue Card -->
        <VBox styleClass="quick-stat-box revenue" 
              spacing="10" alignment="CENTER" prefWidth="200">
            <Label text="💰" styleClass="quick-stat-icon"/>
            <Label text="Doanh thu hôm nay" styleClass="quick-stat-title"/>
            <Label fx:id="todayRevenueLabel" text="0 VND" styleClass="quick-stat-value revenue"/>
        </VBox>

        <!-- Today Orders Card -->
        <VBox styleClass="quick-stat-box orders" 
              spacing="10" alignment="CENTER" prefWidth="200">
            <Label text="📋" styleClass="quick-stat-icon"/>
            <Label text="Đơn hàng hôm nay" styleClass="quick-stat-title"/>
            <Label fx:id="todayOrdersLabel" text="0" styleClass="quick-stat-value orders"/>
        </VBox>

        <!-- Active Tables Card -->
        <VBox styleClass="quick-stat-box tables" 
              spacing="10" alignment="CENTER" prefWidth="200">
            <Label text="🪑" styleClass="quick-stat-icon"/>
            <Label text="Bàn đang hoạt động" styleClass="quick-stat-title"/>
            <Label fx:id="activeTablesLabel" text="0/0" styleClass="quick-stat-value tables"/>
        </VBox>

        <!-- Total Products Card -->
        <VBox styleClass="quick-stat-box staff" 
              spacing="10" alignment="CENTER" prefWidth="200">
            <Label text="🍽️" styleClass="quick-stat-icon"/>
            <Label text="Tổng số món" styleClass="quick-stat-title"/>
            <Label fx:id="totalProductsLabel" text="0" styleClass="quick-stat-value staff"/>
        </VBox>
    </HBox>

    <!-- Quick Actions -->
    <VBox spacing="15" styleClass="status-box">
        <Label text="⚡ Thao tác nhanh" styleClass="status-title"/>
        
        <HBox spacing="12" alignment="CENTER_LEFT">
            <Button fx:id="addUserButton" text="👤 Thêm nhân viên" 
                    styleClass="primary-button" prefHeight="40"/>
            
            <Button fx:id="addProductButton" text="🍽️ Thêm món mới" 
                    styleClass="primary-button" prefHeight="40"/>
            
            <Button fx:id="viewReportsButton" text="📊 Xem báo cáo" 
                    styleClass="secondary-button" prefHeight="40"/>
            
            <Button fx:id="managePromotionsButton" text="🎉 Quản lý khuyến mãi" 
                    styleClass="primary-button" prefHeight="40"/>
        </HBox>
        
        <!-- System Administration -->
        <Label text="🔧 Quản trị hệ thống" styleClass="status-title"/>
        
        <HBox spacing="12" alignment="CENTER_LEFT">
            <Button fx:id="systemSettingsButton" text="⚙️ Cài đặt hệ thống" 
                    styleClass="secondary-button" prefHeight="40"/>
            
            <Button fx:id="backupDataButton" text="💾 Sao lưu dữ liệu" 
                    styleClass="secondary-button" prefHeight="40"/>
            
            <Button fx:id="restoreDataButton" text="📥 Khôi phục dữ liệu" 
                    styleClass="secondary-button" prefHeight="40"/>
            
            <Button fx:id="exportDashboardButton" text="📋 Xuất dashboard" 
                    styleClass="secondary-button" prefHeight="40"/>
        </HBox>
    </VBox>

    <!-- Recent Activity -->
    <VBox spacing="15" styleClass="activities-container">
        <Label text="🕒 Hoạt động gần đây" styleClass="chart-title"/>
        <ListView fx:id="recentActivityList" prefHeight="200" styleClass="activities-list"/>
    </VBox>

    <!-- System Status -->
    <GridPane hgap="20" vgap="15">
        <columnConstraints>
            <ColumnConstraints percentWidth="50" />
            <ColumnConstraints percentWidth="50" />
        </columnConstraints>

        <!-- Database Status -->
        <VBox GridPane.columnIndex="0" GridPane.rowIndex="0" spacing="12" styleClass="status-box">
            <HBox alignment="CENTER_LEFT" spacing="10">
                <Label text="🗄️" styleClass="status-icon" />
                <Label text="Trạng thái cơ sở dữ liệu" styleClass="status-title" />
            </HBox>
            <VBox spacing="5">
                <Label fx:id="dbStatusLabel" text="✅ Kết nối bình thường" styleClass="status-main success" />
                <Label fx:id="dbConnectionLabel" text="📡 Ping: 2ms" styleClass="status-detail" />
                <Label fx:id="dbSizeLabel" text="💾 Dung lượng: 45.2 MB" styleClass="status-detail" />
            </VBox>
        </VBox>

        <!-- System Performance -->
        <VBox GridPane.columnIndex="1" GridPane.rowIndex="0" spacing="12" styleClass="status-box">
            <HBox alignment="CENTER_LEFT" spacing="10">
                <Label text="⚡" styleClass="status-icon" />
                <Label text="Hiệu suất hệ thống" styleClass="status-title" />
            </HBox>
            <VBox spacing="5">
                <Label fx:id="cpuUsageLabel" text="🖥️ CPU: 23%" styleClass="status-main info" />
                <Label fx:id="memoryUsageLabel" text="🧠 RAM: 1.2GB/8GB" styleClass="status-detail" />
                <Label fx:id="diskUsageLabel" text="💽 Ổ cứng: 67% sử dụng" styleClass="status-detail" />
            </VBox>
        </VBox>
    </GridPane>
</VBox>
