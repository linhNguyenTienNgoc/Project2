<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="com.cafe.controller.admin.AdminDashboardController"
      style="-fx-background-color: #f5d6ae;" spacing="0">

    <!-- Top Navigation Bar -->
    <HBox style="-fx-background-color: #5d2b1c; -fx-padding: 10;" alignment="CENTER_LEFT" spacing="20">
        <Label text="màn hình chính Admin" 
               style="-fx-text-fill: #fff9c4; -fx-font-size: 18px; -fx-font-weight: bold;" />
        
        <Region HBox.hgrow="ALWAYS" />
        
        <!-- Navigation Tabs -->
        <HBox spacing="5">
            <Button fx:id="employeeTab" text="Nhân viên" 
                    style="-fx-background-color: #f5d6ae; -fx-text-fill: #4e342e; -fx-font-weight: bold; -fx-background-radius: 5; -fx-padding: 8 15;"
                    onAction="#handleEmployeeTab" />
            <Button fx:id="menuTab" text="Menu" 
                    style="-fx-background-color: transparent; -fx-text-fill: #fff9c4; -fx-background-radius: 5; -fx-padding: 8 15;"
                    onAction="#handleMenuTab" />
            <Button fx:id="tableTab" text="Bàn" 
                    style="-fx-background-color: transparent; -fx-text-fill: #fff9c4; -fx-background-radius: 5; -fx-padding: 8 15;"
                    onAction="#handleTableTab" />
            <Button fx:id="reportTab" text="Báo cáo" 
                    style="-fx-background-color: transparent; -fx-text-fill: #fff9c4; -fx-background-radius: 5; -fx-padding: 8 15;"
                    onAction="#handleReportTab" />
            <Button fx:id="promotionTab" text="Khuyến mãi" 
                    style="-fx-background-color: transparent; -fx-text-fill: #fff9c4; -fx-background-radius: 5; -fx-padding: 8 15;"
                    onAction="#handlePromotionTab" />
        </HBox>
        
        <Region HBox.hgrow="ALWAYS" />
        
        <!-- Logout Button -->
        <Button fx:id="logoutButton" onAction="#handleLogout"
                style="-fx-background-color: transparent; -fx-text-fill: #fff9c4; -fx-font-size: 16px;">
            <graphic>
                <ImageView fitHeight="20" fitWidth="20">
                    <image>
                        <Image url="@../../images/icons/power-icon.png" />
                    </image>
                </ImageView>
            </graphic>
        </Button>
    </HBox>

    <!-- Main Content Area -->
    <VBox style="-fx-background-color: #f8f9fa;" VBox.vgrow="ALWAYS" spacing="0">
        
        <!-- Employee Table -->
        <TableView fx:id="employeeTable" VBox.vgrow="ALWAYS" 
                   style="-fx-background-color: #ffffff; -fx-table-cell-border-color: #f5d6ae;">
            
            <!-- Employee ID Column -->
            <TableColumn fx:id="employeeIdColumn" text="Mã nhân viên" 
                         style="-fx-background-color: #5d2b1c; -fx-text-fill: #fff9c4; -fx-font-weight: bold;"
                         prefWidth="120" />
            
            <!-- Username Column -->
            <TableColumn fx:id="usernameColumn" text="Tên đăng nhập" 
                         style="-fx-background-color: #5d2b1c; -fx-text-fill: #fff9c4; -fx-font-weight: bold;"
                         prefWidth="150" />
            
            <!-- Employee Name Column -->
            <TableColumn fx:id="employeeNameColumn" text="Tên Nhân viên" 
                         style="-fx-background-color: #5d2b1c; -fx-text-fill: #fff9c4; -fx-font-weight: bold;"
                         prefWidth="200" />
            
            <!-- Date of Birth Column -->
            <TableColumn fx:id="dobColumn" text="Ngày sinh" 
                         style="-fx-background-color: #5d2b1c; -fx-text-fill: #fff9c4; -fx-font-weight: bold;"
                         prefWidth="120" />
            
            <!-- Gender Column -->
            <TableColumn fx:id="genderColumn" text="Giới tính" 
                         style="-fx-background-color: #5d2b1c; -fx-text-fill: #fff9c4; -fx-font-weight: bold;"
                         prefWidth="100" />
            
            <!-- Work Shift Column -->
            <TableColumn fx:id="workShiftColumn" text="Ca làm việc" 
                         style="-fx-background-color: #5d2b1c; -fx-text-fill: #fff9c4; -fx-font-weight: bold;"
                         prefWidth="120" />
            
            <!-- Action Column -->
            <TableColumn fx:id="actionColumn" text="" 
                         style="-fx-background-color: #5d2b1c; -fx-text-fill: #fff9c4; -fx-font-weight: bold;"
                         prefWidth="100" />
            
        </TableView>
        
        <!-- Bottom Pagination and Action Bar -->
        <HBox style="-fx-background-color: #5d2b1c; -fx-padding: 10;" alignment="CENTER_LEFT" spacing="10">
            
            <!-- Pagination Controls -->
            <HBox alignment="CENTER_LEFT" spacing="5">
                <Button fx:id="firstPageBtn" text="&lt;&lt;" 
                        style="-fx-background-color: transparent; -fx-text-fill: #fff9c4; -fx-font-weight: bold;"
                        onAction="#handleFirstPage" />
                <Button fx:id="prevPageBtn" text="&lt;" 
                        style="-fx-background-color: transparent; -fx-text-fill: #fff9c4; -fx-font-weight: bold;"
                        onAction="#handlePrevPage" />
                
                <Label text="Trang" style="-fx-text-fill: #fff9c4; -fx-font-weight: bold;" />
                <Label fx:id="currentPageLabel" text="1" 
                       style="-fx-background-color: #f5d6ae; -fx-text-fill: #4e342e; -fx-font-weight: bold; -fx-padding: 5 10; -fx-background-radius: 3;" />
                <Label text="trên" style="-fx-text-fill: #fff9c4; -fx-font-weight: bold;" />
                <Label fx:id="totalPagesLabel" text="7 trang" style="-fx-text-fill: #fff9c4; -fx-font-weight: bold;" />
                
                <Button fx:id="nextPageBtn" text="&gt;" 
                        style="-fx-background-color: transparent; -fx-text-fill: #fff9c4; -fx-font-weight: bold;"
                        onAction="#handleNextPage" />
                <Button fx:id="lastPageBtn" text="&gt;&gt;" 
                        style="-fx-background-color: transparent; -fx-text-fill: #fff9c4; -fx-font-weight: bold;"
                        onAction="#handleLastPage" />
            </HBox>
            
            <Region HBox.hgrow="ALWAYS" />
            
            <!-- Add Employee Button -->
            <Button fx:id="addEmployeeBtn" text="Add nhân viên" 
                    style="-fx-background-color: #f5d6ae; -fx-text-fill: #4e342e; -fx-font-weight: bold; -fx-background-radius: 10; -fx-padding: 10 20;"
                    onAction="#handleAddEmployee" />
        </HBox>
    </VBox>
</VBox> 