<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.cafe.controller.admin.AdminDashboardController"
            style="-fx-background-color: #f8f9fa;">

    <!-- Top Header -->
    <top>
        <HBox fx:id="headerBar" style="-fx-background-color: #2E86AB; -fx-padding: 15;" 
              alignment="CENTER_LEFT" spacing="20">
            
            <!-- Logo and Title -->
            <HBox alignment="CENTER_LEFT" spacing="10">
                <ImageView fitHeight="40" fitWidth="40">
                    <image>
                        <Image url="@../../images/logo/nopita-logo.png" />
                    </image>
                </ImageView>
                <VBox alignment="CENTER_LEFT" spacing="2">
                    <Label text="Cafe Management System" 
                           style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;" />
                    <Label text="Admin Dashboard" 
                           style="-fx-text-fill: #e3f2fd; -fx-font-size: 12px;" />
                </VBox>
            </HBox>

            <Region HBox.hgrow="ALWAYS" />

            <!-- User Info -->
            <HBox alignment="CENTER_RIGHT" spacing="10">
                <VBox alignment="CENTER_RIGHT" spacing="2">
                    <Label fx:id="userNameLabel" text="Admin User" 
                           style="-fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold;" />
                    <Label fx:id="userRoleLabel" text="Administrator" 
                           style="-fx-text-fill: #e3f2fd; -fx-font-size: 12px;" />
                </VBox>
                <Button fx:id="logoutButton" text="Đăng xuất"
                        style="-fx-background-color: #dc3545; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 16; -fx-background-radius: 5;" />
            </HBox>
        </HBox>
    </top>

    <!-- Navigation Tabs -->
    <center>
        <VBox spacing="0">
            <!-- Tab Navigation -->
            <HBox fx:id="tabNavigation" style="-fx-background-color: #f8f9fa; -fx-padding: 10; -fx-border-color: #dee2e6; -fx-border-width: 0 0 1 0;" 
                  alignment="CENTER_LEFT" spacing="5">
                
                <Button fx:id="userTabButton" text="👥 Quản lý người dùng"
                        style="-fx-background-color: #8B4513; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 12 30; -fx-border-width: 0; -fx-min-width: 120;" />
                
                <Button fx:id="menuTabButton" text="🍽️ Quản lý Menu"
                        style="-fx-background-color: #A0522D; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 12 30; -fx-border-width: 0; -fx-min-width: 120;" />
                
                <Button fx:id="tableTabButton" text="🪑 Quản lý Bàn"
                        style="-fx-background-color: #A0522D; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 12 30; -fx-border-width: 0; -fx-min-width: 120;" />
                
                <Button fx:id="reportTabButton" text="📊 Báo cáo"
                        style="-fx-background-color: #A0522D; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 12 30; -fx-border-width: 0; -fx-min-width: 120;" />
                
                <Button fx:id="promotionTabButton" text="🎉 Khuyến mãi"
                        style="-fx-background-color: #A0522D; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 12 30; -fx-border-width: 0; -fx-min-width: 120;" />
            </HBox>

            <!-- Content Area -->
            <StackPane fx:id="contentPane" VBox.vgrow="ALWAYS" style="-fx-background-color: white;">
                <!-- Default content will be loaded here -->
                <VBox alignment="CENTER" spacing="20">
                    <Label text="👋 Chào mừng đến với Admin Dashboard" 
                           style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2E86AB;" />
                    <Label text="Vui lòng chọn một tab để bắt đầu quản lý hệ thống" 
                           style="-fx-font-size: 16px; -fx-text-fill: #666;" />
                </VBox>
            </StackPane>
        </VBox>
    </center>

    <!-- Right Sidebar - Order Panel -->
    <right>
        <VBox fx:id="orderPanel" style="-fx-background-color: #f8f9fa; -fx-padding: 15; -fx-min-width: 300;" spacing="15">
            
            <!-- Order Header -->
            <VBox alignment="CENTER" spacing="5" style="-fx-background-color: #2E86AB; -fx-padding: 15; -fx-background-radius: 8;">
                <Label text="📋 ĐƠN HÀNG" 
                       style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: white;" />
                <Label fx:id="tableInfoLabel" text="Bàn: --" 
                       style="-fx-font-size: 14px; -fx-text-fill: #e3f2fd;" />
            </VBox>

            <!-- Order Items -->
            <VBox fx:id="orderItemsContainer" spacing="5" VBox.vgrow="ALWAYS">
                <Label text="Chưa có món nào được chọn" 
                       style="-fx-text-fill: #999; -fx-font-style: italic; -fx-alignment: center;" />
            </VBox>

            <!-- Order Total -->
            <VBox style="-fx-background-color: #e8f5e8; -fx-padding: 15; -fx-background-radius: 8;" spacing="5">
                <Label text="Tổng cộng:" 
                       style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #2e7d32;" />
                <Label fx:id="totalAmountLabel" text="0 VNĐ" 
                       style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2e7d32;" />
            </VBox>

            <!-- Order Actions -->
            <VBox spacing="8">
                <Button fx:id="placeOrderButton" text="📝 Đặt món" 
                        style="-fx-background-color: #2E86AB; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10; -fx-background-radius: 5;" />
                <Button fx:id="paymentButton" text="💳 Thanh toán" 
                        style="-fx-background-color: #28a745; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10; -fx-background-radius: 5;" />
                <Button fx:id="clearOrderButton" text="🗑️ Xóa đơn hàng" 
                        style="-fx-background-color: #dc3545; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10; -fx-background-radius: 5;" />
            </VBox>
        </VBox>
    </right>

</BorderPane>
