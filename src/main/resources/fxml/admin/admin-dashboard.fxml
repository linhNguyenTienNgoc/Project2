<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.collections.FXCollections?>
<?import java.lang.String?>

<VBox xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.cafe.controller.user.UserController"
      style="-fx-background-color: #f5d6ae;" spacing="0">

    <!-- Top Navigation Bar -->
    <HBox style="-fx-background-color: #5d2b1c; -fx-padding: 10;" alignment="CENTER_LEFT" spacing="20">
        <Label text="Màn hình chính Admin"
               style="-fx-text-fill: #fff9c4; -fx-font-size: 18px; -fx-font-weight: bold;" />

        <Region HBox.hgrow="ALWAYS" />

        <!-- Navigation Tabs -->
        <HBox spacing="5">
            <Button fx:id="userTab" text="Nhân viên"
                    style="-fx-background-color: #f5d6ae; -fx-text-fill: #4e342e; -fx-font-weight: bold; -fx-background-radius: 5; -fx-padding: 8 15;"
                     />
            <Button fx:id="menuTab" text="Menu"
                    style="-fx-background-color: transparent; -fx-text-fill: #fff9c4; -fx-background-radius: 5; -fx-padding: 8 15;"
                     />
            <Button fx:id="tableTab" text="Bàn"
                    style="-fx-background-color: transparent; -fx-text-fill: #fff9c4; -fx-background-radius: 5; -fx-padding: 8 15;"
                    onAction="#showTable" />
            <Button fx:id="reportTab" text="Báo cáo"
                    style="-fx-background-color: transparent; -fx-text-fill: #fff9c4; -fx-background-radius: 5; -fx-padding: 8 15;"
                    />
            <Button fx:id="promotionTab" text="Khuyến mãi"
                    style="-fx-background-color: transparent; -fx-text-fill: #fff9c4; -fx-background-radius: 5; -fx-padding: 8 15;"
                    />
        </HBox>

        <Region HBox.hgrow="ALWAYS" />

        <!-- Logout Button -->
        <Button fx:id="logoutButton"
                style="-fx-background-color: transparent; -fx-text-fill: #fff9c4; -fx-font-size: 16px;">
            <graphic>
                <ImageView fitHeight="20" fitWidth="20">
                    <image>
                        <Image url="@../../images/icons/power-icon.png" />
                    </image>
                </ImageView>
            </graphic>
        </Button>
    </HBox>

    <!-- Main Content Area -->
    <VBox style="-fx-background-color: #f8f9fa;" VBox.vgrow="ALWAYS" spacing="0">

        <!-- user Table -->
        <TableView fx:id="staffTable" VBox.vgrow="ALWAYS"
                   style="-fx-background-color: #ffffff; -fx-table-cell-border-color: #f5d6ae;">

            <columns>
                <TableColumn fx:id="idColumn" text="Mã nhân viên" prefWidth="150"/>
                <TableColumn fx:id="usernameColumn" text="Tên đăng nhập" prefWidth="150"/>
                <TableColumn fx:id="fullNameColumn" text="Tên Nhân viên" prefWidth="150"/>
                <TableColumn fx:id="emailColumn" text="Email" prefWidth="150"/>
                <TableColumn fx:id="phoneColumn" text="SĐT" prefWidth="150"/>
                <TableColumn fx:id="roleColumn" text="Chức vụ" prefWidth="150"/>
                <TableColumn fx:id="updateColumn" text="" prefWidth="100"/>
                <TableColumn fx:id="deleteColumn" text="" prefWidth="100"/>
            </columns>
        </TableView>

        <!-- Inline Add user Form -->
        <HBox style="-fx-background-color: #5d2b1c; -fx-padding: 10;" alignment="CENTER_LEFT" spacing="10">
            <TextField fx:id="idField" promptText="Mã NV" prefWidth="150" prefHeight="36"/>
            <TextField fx:id="usernameField" promptText="Tên đăng nhập" prefWidth="150" prefHeight="36"/>

            <TextField fx:id="fullNameField" promptText="Họ Tên" prefWidth="150" prefHeight="36"/>
            <TextField fx:id="emailField" promptText="Email" prefWidth="150" prefHeight="36"/>
            <TextField fx:id="phoneField" promptText="SĐT" prefWidth="150" prefHeight="36"/>
            <ComboBox fx:id="roleComboBox" prefWidth="150" prefHeight="36">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <String fx:value="Admin"/>
                        <String fx:value="Manager"/>
                        <String fx:value="Cashier"/>
                        <String fx:value="Waiter"/>
                        <String fx:value="Barista"/>
                    </FXCollections>
                </items>
            </ComboBox>
            <TextField fx:id="passwordField" promptText="Mật khẩu" prefWidth="150" prefHeight="36"/>
            <Button text="Create"
                    fx:id="inlineSubmit"
                    onAction="#onInlineSubmitClicked"
                    style="-fx-background-color: #FBECE3; -fx-font-weight: bold;" prefHeight="36"/>
        </HBox>
    </VBox>
</VBox>
