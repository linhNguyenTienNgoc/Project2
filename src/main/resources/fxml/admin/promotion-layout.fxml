<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.cafe.controller.promotion.PromotionController"
      style="-fx-background-color: #f5d6ae;" spacing="0">

    <HBox style="-fx-background-color: #5d2b1c; -fx-padding: 10;" alignment="CENTER_LEFT" spacing="20">
        <Label text="Quản lý khuyến mãi"
               style="-fx-text-fill: #fff9c4; -fx-font-size: 18px; -fx-font-weight: bold;" />
        <Region HBox.hgrow="ALWAYS" />
        <Button fx:id="logoutButton" style="-fx-background-color: transparent; -fx-text-fill: #fff9c4;">
            <graphic>
                <ImageView fitHeight="20" fitWidth="20">
                    <image>
                        <Image url="@../../images/icons/power-icon.png" />
                    </image>
                </ImageView>
            </graphic>
        </Button>
    </HBox>

    <VBox style="-fx-background-color: #f8f9fa;" VBox.vgrow="ALWAYS" spacing="0">
        <TableView fx:id="promotionTable" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn text="Mã KM" prefWidth="150"/>
                <TableColumn text="Tên KM" prefWidth="150"/>
                <TableColumn text="Giảm %" prefWidth="150"/>
                <TableColumn text="Ngày bắt đầu" prefWidth="150"/>
                <TableColumn text="Ngày kết thúc" prefWidth="150"/>
                <TableColumn text="Sửa" prefWidth="100"/>
                <TableColumn text="Xóa" prefWidth="100"/>
            </columns>
        </TableView>

        <HBox style="-fx-background-color: #5d2b1c; -fx-padding: 10;" alignment="CENTER_LEFT" spacing="10">
            <TextField promptText="Mã KM" prefWidth="150" prefHeight="36"/>
            <TextField promptText="Tên KM" prefWidth="150" prefHeight="36"/>
            <TextField promptText="Giảm %" prefWidth="150" prefHeight="36"/>
            <TextField promptText="Ngày bắt đầu" prefWidth="150" prefHeight="36"/>
            <TextField promptText="Ngày kết thúc" prefWidth="150" prefHeight="36"/>
            <Button text="Thêm KM" style="-fx-background-color: #FBECE3; -fx-font-weight: bold;" prefHeight="36"/>
        </HBox>
    </VBox>
</VBox>
