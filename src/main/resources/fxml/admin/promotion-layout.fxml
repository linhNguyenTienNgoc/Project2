<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.cafe.controller.admin.AdminPromotionController"
      style="-fx-background-color: #f8f9fa;" spacing="20" padding="20">

    <!-- Header -->
    <HBox alignment="CENTER_LEFT" spacing="20">
        <Label text="🎁 Quản lý khuyến mãi" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #333;"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Button fx:id="addPromotionButton" text="+ Thêm khuyến mãi" 
                style="-fx-background-color: #007bff; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 20;"/>
    </HBox>

    <!-- Statistics Cards -->
    <HBox spacing="20" alignment="CENTER">
        <VBox style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 5, 0, 0, 2);" 
              spacing="10" alignment="CENTER" prefWidth="200">
            <Label text="🎁" style="-fx-font-size: 32px;"/>
            <Label text="Tổng khuyến mãi" style="-fx-font-size: 12px; -fx-text-fill: #666;"/>
            <Label fx:id="totalPromotionsLabel" text="0" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #007bff;"/>
        </VBox>
        
        <VBox style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 5, 0, 0, 2);" 
              spacing="10" alignment="CENTER" prefWidth="200">
            <Label text="✅" style="-fx-font-size: 32px;"/>
            <Label text="Đang hoạt động" style="-fx-font-size: 12px; -fx-text-fill: #666;"/>
            <Label fx:id="activePromotionsLabel" text="0" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #28a745;"/>
        </VBox>
        
        <VBox style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 5, 0, 0, 2);" 
              spacing="10" alignment="CENTER" prefWidth="200">
            <Label text="⏰" style="-fx-font-size: 32px;"/>
            <Label text="Hết hạn" style="-fx-font-size: 12px; -fx-text-fill: #666;"/>
            <Label fx:id="expiredPromotionsLabel" text="0" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #dc3545;"/>
        </VBox>
        
        <VBox style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 5, 0, 0, 2);" 
              spacing="10" alignment="CENTER" prefWidth="200">
            <Label text="⏳" style="-fx-font-size: 32px;"/>
            <Label text="Sắp diễn ra" style="-fx-font-size: 12px; -fx-text-fill: #666;"/>
            <Label fx:id="upcomingPromotionsLabel" text="0" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #ffc107;"/>
        </VBox>
    </HBox>

    <!-- Quick Actions -->
    <HBox spacing="15" alignment="CENTER_LEFT"
          style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 3, 0, 0, 1);">
        <Label text="⚡ Tạo nhanh:" style="-fx-font-weight: bold; -fx-font-size: 14px;"/>
        <Button fx:id="createWeekendPromoButton" text="🎉 Cuối tuần" 
                style="-fx-background-color: #ff6b6b; -fx-text-fill: white; -fx-padding: 8 15;"/>
        <Button fx:id="createBirthdayPromoButton" text="🎂 Sinh nhật" 
                style="-fx-background-color: #4ecdc4; -fx-text-fill: white; -fx-padding: 8 15;"/>
        <Button fx:id="createSeasonalPromoButton" text="🌟 Theo mùa" 
                style="-fx-background-color: #45b7d1; -fx-text-fill: white; -fx-padding: 8 15;"/>
        <Button fx:id="deactivateExpiredButton" text="⏰ Vô hiệu hết hạn" 
                style="-fx-background-color: #f39c12; -fx-text-fill: white; -fx-padding: 8 15;"/>
    </HBox>

    <!-- Search and Filter -->
    <HBox spacing="15" alignment="CENTER_LEFT" 
          style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 3, 0, 0, 1);">
        <TextField fx:id="searchField" promptText="🔍 Tìm kiếm khuyến mãi..." prefWidth="300"
                   style="-fx-padding: 10; -fx-border-radius: 5; -fx-background-radius: 5;"/>
        <ComboBox fx:id="typeFilterCombo" promptText="Loại KM" prefWidth="150"/>
        <ComboBox fx:id="statusFilterCombo" promptText="Trạng thái" prefWidth="150"/>
        <Button fx:id="refreshButton" text="🔄 Làm mới" 
                style="-fx-background-color: #6c757d; -fx-text-fill: white; -fx-padding: 10 15;"/>
    </HBox>

    <!-- Promotion Table -->
    <TableView fx:id="promotionTable" 
               style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 5, 0, 0, 2);"
               VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="idColumn" text="ID" prefWidth="50"/>
            <TableColumn fx:id="nameColumn" text="Tên khuyến mãi" prefWidth="180"/>
            <TableColumn fx:id="typeColumn" text="Loại" prefWidth="120"/>
            <TableColumn fx:id="discountColumn" text="Giảm giá" prefWidth="100"/>
            <TableColumn fx:id="startDateColumn" text="Ngày bắt đầu" prefWidth="120"/>
            <TableColumn fx:id="endDateColumn" text="Ngày kết thúc" prefWidth="120"/>
            <TableColumn fx:id="statusColumn" text="Trạng thái" prefWidth="120"/>
            <TableColumn fx:id="actionsColumn" text="Thao tác" prefWidth="150"/>
        </columns>
    </TableView>

    <!-- Promotion Form -->
    <VBox fx:id="promotionFormSection" spacing="15" managed="false" visible="false"
          style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 5, 0, 0, 2);">
        
        <Label text="📝 Thông tin khuyến mãi" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #333;"/>
        
        <GridPane hgap="15" vgap="15">
            <columnConstraints>
                <ColumnConstraints percentWidth="25"/>
                <ColumnConstraints percentWidth="25"/>
                <ColumnConstraints percentWidth="25"/>
                <ColumnConstraints percentWidth="25"/>
            </columnConstraints>

            <Label text="Tên khuyến mãi:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
            <TextField fx:id="nameField" GridPane.columnIndex="1" GridPane.columnSpan="3" GridPane.rowIndex="0"/>
            
            <Label text="Loại khuyến mãi:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
            <ComboBox fx:id="typeCombo" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
            
            <Label text="Giá trị giảm:" GridPane.columnIndex="2" GridPane.rowIndex="1"/>
            <TextField fx:id="discountValueField" GridPane.columnIndex="3" GridPane.rowIndex="1"/>
            
            <Label text="Ngày bắt đầu:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
            <DatePicker fx:id="startDatePicker" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
            
            <Label text="Ngày kết thúc:" GridPane.columnIndex="2" GridPane.rowIndex="2"/>
            <DatePicker fx:id="endDatePicker" GridPane.columnIndex="3" GridPane.rowIndex="2"/>
            
            <Label text="Đơn hàng tối thiểu:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
            <TextField fx:id="minOrderValueField" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
            
            <Label text="Giảm tối đa:" GridPane.columnIndex="2" GridPane.rowIndex="3"/>
            <TextField fx:id="maxDiscountField" GridPane.columnIndex="3" GridPane.rowIndex="3"/>
            
            <Label text="Giới hạn sử dụng:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
            <TextField fx:id="usageLimitField" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
            
            <Label text="Trạng thái:" GridPane.columnIndex="2" GridPane.rowIndex="4"/>
            <ComboBox fx:id="statusCombo" GridPane.columnIndex="3" GridPane.rowIndex="4"/>
            
            <Label text="Mô tả:" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
            <TextArea fx:id="descriptionField" prefRowCount="3" GridPane.columnIndex="1" GridPane.columnSpan="3" GridPane.rowIndex="5"/>
        </GridPane>
        
        <HBox spacing="10" alignment="CENTER_LEFT">
            <Button fx:id="savePromotionButton" text="💾 Lưu" 
                    style="-fx-background-color: #007bff; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 20;"/>
            <Button fx:id="cancelButton" text="❌ Hủy" 
                    style="-fx-background-color: #6c757d; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 20;"/>
            <Button fx:id="resetFormButton" text="🔄 Reset" 
                    style="-fx-background-color: #ffc107; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 20;"/>
        </HBox>
    </VBox>
</VBox>
