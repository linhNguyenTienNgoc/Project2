<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20" style="-fx-background-color: #f8f9fa;" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.cafe.controller.admin.PromotionController">

    <padding>
        <Insets bottom="30" left="30" right="30" top="30" />
    </padding>

    <!-- Content Area -->
    <VBox spacing="15" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20;">
        
        <!-- Search and Filter -->
        <HBox alignment="CENTER_LEFT" spacing="15">
            <TextField fx:id="searchField" promptText="Tìm kiếm khuyến mãi..." style="-fx-pref-width: 300;" />
            <ComboBox fx:id="statusFilter" promptText="Trạng thái" style="-fx-pref-width: 150;" />
            <Button style="-fx-background-color: #2E86AB; -fx-text-fill: white;" text="Tìm kiếm" />
            <Region HBox.hgrow="ALWAYS" />
            <Button style="-fx-background-color: #28a745; -fx-text-fill: white;" text="+ Thêm khuyến mãi" />
        </HBox>

        <!-- Promotion List -->
        <TableView fx:id="promotionTable" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="codeColumn" prefWidth="100" text="Mã KM" />
                <TableColumn fx:id="nameColumn" prefWidth="200" text="Tên khuyến mãi" />
                <TableColumn fx:id="typeColumn" prefWidth="100" text="Loại" />
                <TableColumn fx:id="valueColumn" prefWidth="100" text="Giá trị" />
                <TableColumn fx:id="startDateColumn" prefWidth="120" text="Ngày bắt đầu" />
                <TableColumn fx:id="endDateColumn" prefWidth="120" text="Ngày kết thúc" />
                <TableColumn fx:id="statusColumn" prefWidth="100" text="Trạng thái" />
                <TableColumn fx:id="actionColumn" prefWidth="150" text="Thao tác" />
            </columns>
        </TableView>

        <!-- Pagination -->
        <HBox alignment="CENTER" spacing="10">
            <Button text="← Trước" />
            <Label text="Trang 1 của 5" />
            <Button text="Sau →" />
        </HBox>
    </VBox>

    <!-- Statistics -->
    <HBox alignment="CENTER" spacing="20">
        <VBox alignment="CENTER" style="-fx-background-color: #e3f2fd; -fx-padding: 15; -fx-background-radius: 8;">
            <Label style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #1976d2;" text="15" />
            <Label style="-fx-font-size: 12px; -fx-text-fill: #666;" text="Khuyến mãi đang hoạt động" />
        </VBox>
        
        <VBox alignment="CENTER" style="-fx-background-color: #f3e5f5; -fx-padding: 15; -fx-background-radius: 8;">
            <Label style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #7b1fa2;" text="8" />
            <Label style="-fx-font-size: 12px; -fx-text-fill: #666;" text="Khuyến mãi sắp hết hạn" />
        </VBox>
        
        <VBox alignment="CENTER" style="-fx-background-color: #fff3e0; -fx-padding: 15; -fx-background-radius: 8;">
            <Label style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #f57c00;" text="2.5M" />
            <Label style="-fx-font-size: 12px; -fx-text-fill: #666;" text="Tổng giá trị khuyến mãi" />
        </VBox>
    </HBox>

</VBox>
