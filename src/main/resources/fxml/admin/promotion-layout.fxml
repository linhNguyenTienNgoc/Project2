<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.cafe.controller.promotion.PromotionController"
           styleClass="main-container"
           stylesheets="/css/admin-theme.css,/css/promotion.css">

    <!-- Top - Toolbar với các nút CRUD và tìm kiếm -->
    <top>
        <VBox spacing="15">
            <padding>
                <Insets top="20" right="20" bottom="10" left="20"/>
            </padding>
            
            <!-- Header Section với stats -->
            <HBox alignment="CENTER_LEFT" spacing="20">
                <Label text="🎉 Quản lý Khuyến mãi" styleClass="page-title"/>
                <Region HBox.hgrow="ALWAYS"/>
                
                <!-- Quick Stats -->
                <VBox spacing="3" alignment="CENTER" styleClass="quick-stats">
                    <Label fx:id="totalPromotionsLabel" text="0" styleClass="stats-number-info"/>
                    <Label text="Tổng KM" styleClass="stats-label"/>
                </VBox>
                
                <VBox spacing="3" alignment="CENTER" styleClass="quick-stats">
                    <Label fx:id="activePromotionsLabel" text="0" styleClass="stats-number-success"/>
                    <Label text="Đang hoạt động" styleClass="stats-label"/>
                </VBox>
                
                <VBox spacing="3" alignment="CENTER" styleClass="quick-stats">
                    <Label fx:id="expiredPromotionsLabel" text="0" styleClass="stats-number-danger"/>
                    <Label text="Hết hạn" styleClass="stats-label"/>
                </VBox>
                
                <VBox spacing="3" alignment="CENTER" styleClass="quick-stats">
                    <Label fx:id="upcomingPromotionsLabel" text="0" styleClass="stats-number-warning"/>
                    <Label text="Sắp tới" styleClass="stats-label"/>
                </VBox>
            </HBox>
            
            <!-- Toolbar -->
            <HBox spacing="15" alignment="CENTER_LEFT" styleClass="toolbar">
                <!-- Action Buttons -->
                <HBox spacing="10" alignment="CENTER_LEFT" styleClass="action-buttons">
                    <Button fx:id="addPromotionButton" text="➕ Thêm KM" 
                            onAction="#handleAddPromotion" styleClass="btn, btn-success"/>
                    <Button fx:id="editPromotionButton" text="✏️ Sửa KM" 
                            onAction="#handleEditPromotion" styleClass="btn, btn-warning" disable="true"/>
                    <Button fx:id="deletePromotionButton" text="🗑️ Xóa KM" 
                            onAction="#handleDeletePromotion" styleClass="btn, btn-danger" disable="true"/>
                    <Button fx:id="refreshButton" text="🔄 Làm mới" 
                            onAction="#handleRefresh" styleClass="btn, btn-info"/>
                </HBox>
                
                <Region HBox.hgrow="ALWAYS"/>
                
                <!-- Search and Filter -->
                <HBox spacing="10" alignment="CENTER_RIGHT" styleClass="search-section">
                    <Label text="Loại giảm:" styleClass="filter-label"/>
                    <ComboBox fx:id="discountTypeFilterCombo" promptText="Tất cả" 
                             onAction="#handleDiscountTypeFilter" styleClass="filter-combo"/>
                    
                    <Label text="Trạng thái:" styleClass="filter-label"/>
                    <ComboBox fx:id="statusFilterCombo" promptText="Tất cả" 
                             onAction="#handleStatusFilter" styleClass="filter-combo"/>
                    
                    <TextField fx:id="searchField" promptText="🔍 Tìm theo tên khuyến mãi..." 
                              onKeyReleased="#handleSearch" styleClass="search-field" 
                              prefWidth="250"/>
                </HBox>
            </HBox>
        </VBox>
    </top>

    <!-- Center - TableView hiển thị danh sách khuyến mãi -->
    <center>
        <VBox>
            <padding>
                <Insets top="0" right="20" bottom="20" left="20"/>
            </padding>
            
            <ScrollPane fitToWidth="true" fitToHeight="true" styleClass="table-scroll">
                <TableView fx:id="promotionTableView" styleClass="data-table">
                    <columns>
                        <TableColumn fx:id="idColumn" text="ID" prefWidth="60" 
                                   sortable="true" styleClass="id-column"/>
                        <TableColumn fx:id="nameColumn" text="Tên khuyến mãi" prefWidth="200" 
                                   sortable="true" styleClass="name-column"/>
                        <TableColumn fx:id="discountTypeColumn" text="Loại giảm" prefWidth="110" 
                                   sortable="true" styleClass="discount-type-column"/>
                        <TableColumn fx:id="discountValueColumn" text="Giá trị" prefWidth="100" 
                                   sortable="true" styleClass="discount-value-column"/>
                        <TableColumn fx:id="minOrderColumn" text="Min Order" prefWidth="120" 
                                   sortable="true" styleClass="min-order-column"/>
                        <TableColumn fx:id="maxDiscountColumn" text="Max Discount" prefWidth="120" 
                                   sortable="true" styleClass="max-discount-column"/>
                        <TableColumn fx:id="timeRangeColumn" text="Thời gian" prefWidth="200" 
                                   sortable="true" styleClass="time-range-column"/>
                        <TableColumn fx:id="usageColumn" text="Lượt dùng" prefWidth="120" 
                                   sortable="true" styleClass="usage-column"/>
                        <TableColumn fx:id="statusColumn" text="Trạng thái" prefWidth="120" 
                                   sortable="true" styleClass="status-column"/>
                        <TableColumn fx:id="actionsColumn" text="Thao tác" prefWidth="120" 
                                   sortable="false" styleClass="actions-column"/>
                    </columns>
                    
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                    </columnResizePolicy>
                </TableView>
            </ScrollPane>
        </VBox>
    </center>

    <!-- Bottom - Status bar -->
    <bottom>
        <HBox alignment="CENTER_LEFT" spacing="15" styleClass="status-bar">
            <padding>
                <Insets top="10" right="20" bottom="10" left="20"/>
            </padding>
            
            <Label fx:id="statusLabel" text="Sẵn sàng" styleClass="status-text"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Label fx:id="recordCountLabel" text="0 khuyến mãi" styleClass="record-count"/>
        </HBox>
    </bottom>

</BorderPane>