<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="20" style="-fx-background-color: #f8f9fa;"
      xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.cafe.controller.admin.PromotionController">

    <padding>
        <Insets top="30" right="30" bottom="30" left="30" />
    </padding>

    <!-- Header -->
    <VBox alignment="CENTER" spacing="10">
        <Label text="🎉 QUẢN LÝ KHUYẾN MÃI" 
               style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2E86AB;" />
        <Label text="Quản lý các chương trình khuyến mãi và giảm giá" 
               style="-fx-font-size: 14px; -fx-text-fill: #666;" />
    </VBox>

    <!-- Content Area -->
    <VBox spacing="15" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20;">
        
        <!-- Search and Filter -->
        <HBox spacing="15" alignment="CENTER_LEFT">
            <TextField fx:id="searchField" promptText="Tìm kiếm khuyến mãi..." 
                       style="-fx-pref-width: 300;" />
            <ComboBox fx:id="statusFilter" promptText="Trạng thái" 
                      style="-fx-pref-width: 150;" />
            <Button text="Tìm kiếm" style="-fx-background-color: #2E86AB; -fx-text-fill: white;" />
            <Region HBox.hgrow="ALWAYS" />
            <Button text="+ Thêm khuyến mãi" 
                    style="-fx-background-color: #28a745; -fx-text-fill: white;" />
        </HBox>

        <!-- Promotion List -->
        <TableView fx:id="promotionTable" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn text="Mã KM" fx:id="codeColumn" prefWidth="100" />
                <TableColumn text="Tên khuyến mãi" fx:id="nameColumn" prefWidth="200" />
                <TableColumn text="Loại" fx:id="typeColumn" prefWidth="100" />
                <TableColumn text="Giá trị" fx:id="valueColumn" prefWidth="100" />
                <TableColumn text="Ngày bắt đầu" fx:id="startDateColumn" prefWidth="120" />
                <TableColumn text="Ngày kết thúc" fx:id="endDateColumn" prefWidth="120" />
                <TableColumn text="Trạng thái" fx:id="statusColumn" prefWidth="100" />
                <TableColumn text="Thao tác" fx:id="actionColumn" prefWidth="150" />
            </columns>
        </TableView>

        <!-- Pagination -->
        <HBox alignment="CENTER" spacing="10">
            <Button text="← Trước" />
            <Label text="Trang 1 của 5" />
            <Button text="Sau →" />
        </HBox>
    </VBox>

    <!-- Statistics -->
    <HBox spacing="20" alignment="CENTER">
        <VBox alignment="CENTER" style="-fx-background-color: #e3f2fd; -fx-padding: 15; -fx-background-radius: 8;">
            <Label text="15" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #1976d2;" />
            <Label text="Khuyến mãi đang hoạt động" style="-fx-font-size: 12px; -fx-text-fill: #666;" />
        </VBox>
        
        <VBox alignment="CENTER" style="-fx-background-color: #f3e5f5; -fx-padding: 15; -fx-background-radius: 8;">
            <Label text="8" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #7b1fa2;" />
            <Label text="Khuyến mãi sắp hết hạn" style="-fx-font-size: 12px; -fx-text-fill: #666;" />
        </VBox>
        
        <VBox alignment="CENTER" style="-fx-background-color: #fff3e0; -fx-padding: 15; -fx-background-radius: 8;">
            <Label text="2.5M" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #f57c00;" />
            <Label text="Tổng giá trị khuyến mãi" style="-fx-font-size: 12px; -fx-text-fill: #666;" />
        </VBox>
    </HBox>

</VBox>
