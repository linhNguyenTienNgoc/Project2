<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.cafe.controller.admin.DashboardOverviewController">
   <stylesheets>
      <URL value="@../../css/admin-theme.css" />
      <URL value="@../../css/dashboard-overview.css" />
   </stylesheets>
   <top>
      <!-- Header Section -->
      <VBox styleClass="header-section">
         <HBox alignment="CENTER_LEFT" spacing="20.0" styleClass="header-content">
            <ImageView fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../images/icons/power-icon.png" />
               </image>
            </ImageView>
            <VBox>
               <Label styleClass="header-title" text="Bảng điều khiển" />
               <Label fx:id="dateTimeLabel" styleClass="header-datetime" text="Hôm nay, 15 tháng 1, 2024" />
            </VBox>
            <Region HBox.hgrow="ALWAYS" />
            <Button fx:id="refreshButton" onAction="#handleRefresh" styleClass="refresh-btn" text="Làm mới" />
         </HBox>
         <padding>
            <Insets bottom="20.0" left="30.0" right="30.0" top="20.0" />
         </padding>
      </VBox>
   </top>
   <center>
      <ScrollPane fitToWidth="true" hbarPolicy="NEVER" vbarPolicy="AS_NEEDED">
         <VBox spacing="30.0">
            <padding>
               <Insets bottom="30.0" left="30.0" right="30.0" top="10.0" />
            </padding>
            
            <!-- Statistics Cards Section -->
            <VBox spacing="15.0">
               <Label styleClass="section-title" text="Thống kê tổng quan" />
               <GridPane hgap="20.0" vgap="20.0">
                  <columnConstraints>
                     <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                     <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                     <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                     <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                  </columnConstraints>
                  <rowConstraints>
                     <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  </rowConstraints>
                  
                  <!-- Revenue Card -->
                  <VBox styleClass="stat-card revenue-card" GridPane.columnIndex="0">
                     <HBox alignment="CENTER_LEFT" spacing="15.0">
                        <ImageView fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../../images/icons/power-icon.png" />
                           </image>
                        </ImageView>
                        <VBox>
                           <Label styleClass="card-title" text="Doanh thu hôm nay" />
                           <Label fx:id="revenueLabel" styleClass="card-value" text="0 VNĐ" />
                        </VBox>
                     </HBox>
                     <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                     </padding>
                  </VBox>
                  
                  <!-- Tables Card -->
                  <VBox styleClass="stat-card tables-card" GridPane.columnIndex="1">
                     <HBox alignment="CENTER_LEFT" spacing="15.0">
                        <ImageView fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../../images/icons/power-icon.png" />
                           </image>
                        </ImageView>
                        <VBox>
                           <Label styleClass="card-title" text="Tổng số bàn" />
                           <Label fx:id="tablesLabel" styleClass="card-value" text="0" />
                        </VBox>
                     </HBox>
                     <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                     </padding>
                  </VBox>
                  
                  <!-- Orders Card -->
                  <VBox styleClass="stat-card orders-card" GridPane.columnIndex="2">
                     <HBox alignment="CENTER_LEFT" spacing="15.0">
                        <ImageView fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../../images/icons/power-icon.png" />
                           </image>
                        </ImageView>
                        <VBox>
                           <Label styleClass="card-title" text="Đơn hàng hôm nay" />
                           <Label fx:id="ordersLabel" styleClass="card-value" text="0" />
                        </VBox>
                     </HBox>
                     <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                     </padding>
                  </VBox>
                  
                  <!-- Customers Card -->
                  <VBox styleClass="stat-card customers-card" GridPane.columnIndex="3">
                     <HBox alignment="CENTER_LEFT" spacing="15.0">
                        <ImageView fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../../images/icons/power-icon.png" />
                           </image>
                        </ImageView>
                        <VBox>
                           <Label styleClass="card-title" text="Tổng khách hàng" />
                           <Label fx:id="customersLabel" styleClass="card-value" text="0" />
                        </VBox>
                     </HBox>
                     <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                     </padding>
                  </VBox>
               </GridPane>
            </VBox>
            
            <!-- Charts Section -->
            <VBox spacing="30.0">
               <!-- Revenue Chart -->
               <VBox spacing="15.0">
                  <Label styleClass="section-title" text="Doanh thu 7 ngày gần nhất" />
                  <VBox styleClass="chart-container">
                     <BarChart fx:id="revenueChart" prefHeight="300.0">
                        <xAxis>
                           <CategoryAxis fx:id="xAxis" />
                        </xAxis>
                        <yAxis>
                           <NumberAxis fx:id="yAxis" />
                        </yAxis>
                     </BarChart>
                     <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                     </padding>
                  </VBox>
               </VBox>
               
               <!-- Category Distribution Chart -->
               <VBox spacing="15.0">
                  <Label styleClass="section-title" text="Phân phối doanh thu theo danh mục" />
                  <VBox styleClass="chart-container">
                     <PieChart fx:id="categoryChart" prefHeight="300.0" />
                     <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                     </padding>
                  </VBox>
               </VBox>
            </VBox>
         </VBox>
      </ScrollPane>
   </center>
</BorderPane>
