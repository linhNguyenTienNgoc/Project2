<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.cafe.controller.admin.AdminUserController"
      style="-fx-background-color: #f8f9fa;" spacing="20" padding="20">

    <!-- Header -->
    <HBox alignment="CENTER_LEFT" spacing="20">
        <Label text="👥 Quản lý người dùng" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #333;"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Button fx:id="addUserButton" text="+ Thêm người dùng" 
                style="-fx-background-color: #007bff; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 20;"/>
        <Button fx:id="exportButton" text="📊 Xuất dữ liệu" 
                style="-fx-background-color: #28a745; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 20;"/>
    </HBox>

    <!-- Statistics Cards -->
    <HBox spacing="20" alignment="CENTER">
        <VBox style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 5, 0, 0, 2);" 
              spacing="10" alignment="CENTER" prefWidth="200">
            <Label text="👥" style="-fx-font-size: 32px;"/>
            <Label text="Tổng người dùng" style="-fx-font-size: 12px; -fx-text-fill: #666;"/>
            <Label fx:id="totalUsersLabel" text="0" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #007bff;"/>
        </VBox>
        
        <VBox style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 5, 0, 0, 2);" 
              spacing="10" alignment="CENTER" prefWidth="200">
            <Label text="✅" style="-fx-font-size: 32px;"/>
            <Label text="Đang hoạt động" style="-fx-font-size: 12px; -fx-text-fill: #666;"/>
            <Label fx:id="activeUsersLabel" text="0" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #28a745;"/>
        </VBox>
        
        <VBox style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 5, 0, 0, 2);" 
              spacing="10" alignment="CENTER" prefWidth="200">
            <Label text="👑" style="-fx-font-size: 32px;"/>
            <Label text="Quản trị viên" style="-fx-font-size: 12px; -fx-text-fill: #666;"/>
            <Label fx:id="adminUsersLabel" text="0" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #dc3545;"/>
        </VBox>
        
        <VBox style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 5, 0, 0, 2);" 
              spacing="10" alignment="CENTER" prefWidth="200">
            <Label text="👨‍💼" style="-fx-font-size: 32px;"/>
            <Label text="Nhân viên" style="-fx-font-size: 12px; -fx-text-fill: #666;"/>
            <Label fx:id="staffUsersLabel" text="0" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #ffc107;"/>
        </VBox>
    </HBox>

    <!-- Search and Filter -->
    <HBox spacing="15" alignment="CENTER_LEFT" 
          style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 3, 0, 0, 1);">
        <TextField fx:id="searchField" promptText="🔍 Tìm kiếm người dùng..." prefWidth="300"
                   style="-fx-padding: 10; -fx-border-radius: 5; -fx-background-radius: 5;"/>
        <ComboBox fx:id="roleFilterCombo" promptText="Vai trò" prefWidth="150"/>
        <ComboBox fx:id="statusFilterCombo" promptText="Trạng thái" prefWidth="150"/>
        <Button fx:id="refreshButton" text="🔄 Làm mới" 
                style="-fx-background-color: #6c757d; -fx-text-fill: white; -fx-padding: 10 15;"/>
    </HBox>

    <!-- User Table -->
    <TableView fx:id="userTable" 
               style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 5, 0, 0, 2);"
               VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="idColumn" text="ID" prefWidth="50"/>
            <TableColumn fx:id="usernameColumn" text="Tên đăng nhập" prefWidth="120"/>
            <TableColumn fx:id="fullNameColumn" text="Họ tên" prefWidth="150"/>
            <TableColumn fx:id="emailColumn" text="Email" prefWidth="180"/>
            <TableColumn fx:id="phoneColumn" text="Điện thoại" prefWidth="120"/>
            <TableColumn fx:id="roleColumn" text="Vai trò" prefWidth="100"/>
            <TableColumn fx:id="statusColumn" text="Trạng thái" prefWidth="100"/>
            <TableColumn fx:id="createdAtColumn" text="Ngày tạo" prefWidth="120"/>
            <TableColumn fx:id="actionsColumn" text="Thao tác" prefWidth="150"/>
        </columns>
    </TableView>

    <!-- User Form -->
    <VBox fx:id="userFormSection" spacing="15" managed="false" visible="false"
          style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 5, 0, 0, 2);">
        
        <Label text="📝 Thông tin người dùng" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #333;"/>
        
        <GridPane hgap="15" vgap="15">
            <columnConstraints>
                <ColumnConstraints percentWidth="25"/>
                <ColumnConstraints percentWidth="25"/>
                <ColumnConstraints percentWidth="25"/>
                <ColumnConstraints percentWidth="25"/>
            </columnConstraints>

            <Label text="Tên đăng nhập:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
            <TextField fx:id="usernameField" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
            
            <Label text="Họ tên:" GridPane.columnIndex="2" GridPane.rowIndex="0"/>
            <TextField fx:id="fullNameField" GridPane.columnIndex="3" GridPane.rowIndex="0"/>
            
            <Label text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
            <TextField fx:id="emailField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
            
            <Label text="Điện thoại:" GridPane.columnIndex="2" GridPane.rowIndex="1"/>
            <TextField fx:id="phoneField" GridPane.columnIndex="3" GridPane.rowIndex="1"/>
            
            <Label text="Mật khẩu:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
            <PasswordField fx:id="passwordField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
            
            <Label text="Xác nhận MK:" GridPane.columnIndex="2" GridPane.rowIndex="2"/>
            <PasswordField fx:id="confirmPasswordField" GridPane.columnIndex="3" GridPane.rowIndex="2"/>
            
            <Label text="Vai trò:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
            <ComboBox fx:id="roleCombo" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
            
            <Label text="Trạng thái:" GridPane.columnIndex="2" GridPane.rowIndex="3"/>
            <ComboBox fx:id="statusCombo" GridPane.columnIndex="3" GridPane.rowIndex="3"/>
        </GridPane>
        
        <HBox spacing="10" alignment="CENTER_LEFT">
            <Button fx:id="saveUserButton" text="💾 Lưu" 
                    style="-fx-background-color: #007bff; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 20;"/>
            <Button fx:id="cancelButton" text="❌ Hủy" 
                    style="-fx-background-color: #6c757d; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 20;"/>
            <Button fx:id="resetFormButton" text="🔄 Reset" 
                    style="-fx-background-color: #ffc107; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 20;"/>
        </HBox>
    </VBox>
</VBox>
