<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.cafe.controller.admin.AdminUserController"
      spacing="15" styleClass="main-container"
      stylesheets="/css/admin-theme.css,/css/user-styles.css">
    
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- Header Section -->
    <VBox spacing="12" styleClass="header-section">
        <HBox alignment="CENTER_LEFT" spacing="15">
            <Label text="👥 Quản lý Nhân viên" styleClass="page-title"/>
            <Region HBox.hgrow="ALWAYS"/>
            
            <!-- Compact Quick Stats -->
            <VBox spacing="3" alignment="CENTER" styleClass="quick-stats">
                <Label fx:id="totalStaffLabel" text="0" styleClass="stats-number-danger"/>
                <Label text="Tổng NV" styleClass="stats-label"/>
            </VBox>
            
            <VBox spacing="3" alignment="CENTER" styleClass="quick-stats">
                <Label fx:id="activeStaffLabel" text="0" styleClass="stats-number-success"/>
                <Label text="Hoạt động" styleClass="stats-label"/>
            </VBox>
            
            <VBox spacing="3" alignment="CENTER" styleClass="quick-stats">
                <Label fx:id="totalUsersLabel" text="0" styleClass="stats-number-info"/>
                <Label text="Tổng users" styleClass="stats-label"/>
            </VBox>
            
            <VBox spacing="3" alignment="CENTER" styleClass="quick-stats">
                <Label fx:id="activeUsersLabel" text="0" styleClass="stats-number-success"/>
                <Label text="Active" styleClass="stats-label"/>
            </VBox>
            
            <VBox spacing="3" alignment="CENTER" styleClass="quick-stats">
                <Label fx:id="adminUsersLabel" text="0" styleClass="stats-number-warning"/>
                <Label text="Admin" styleClass="stats-label"/>
            </VBox>
            
            <VBox spacing="3" alignment="CENTER" styleClass="quick-stats">
                <Label fx:id="staffUsersLabel" text="0" styleClass="stats-number-primary"/>
                <Label text="Staff" styleClass="stats-label"/>
            </VBox>
        </HBox>
        
        <!-- Compact Toolbar -->
        <VBox spacing="8" styleClass="toolbar">
            <!-- Top Row: Search and Filters -->
            <HBox spacing="12" alignment="CENTER_LEFT">
                <!-- Search Section -->
                <HBox spacing="8" alignment="CENTER_LEFT" styleClass="search-container">
                    <Label text="🔍"/>
                    <TextField fx:id="searchField" 
                              promptText="Tìm theo tên, email, SĐT..." 
                              prefWidth="200" styleClass="search-field"/>
                </HBox>
                
                <!-- Filter Section -->
                <VBox spacing="2">
                    <Label text="Vai trò:" styleClass="filter-label"/>
                    <ComboBox fx:id="roleFilterCombo" prefWidth="90" styleClass="filter-combo"/>
                </VBox>
                
                <VBox spacing="2">
                    <Label text="Trạng thái:" styleClass="filter-label"/>
                    <ComboBox fx:id="statusFilterCombo" prefWidth="90" styleClass="filter-combo"/>
                </VBox>
            </HBox>
            
            <!-- Bottom Row: Action Buttons -->
            <HBox spacing="8" alignment="CENTER_LEFT">
                <Button fx:id="addUserButton" text="➕ Thêm" styleClass="btn-primary"/>
                <Button fx:id="editUserButton" text="✎ Sửa" styleClass="btn-warning" disable="true"/>
                <Button fx:id="deleteUserButton" text="🗑 Xóa" styleClass="btn-danger" disable="true"/>
                
                <Separator orientation="VERTICAL" prefHeight="25"/>
                
                <Button fx:id="refreshButton" text="🔄 Refresh" styleClass="btn-secondary"/>
                <Button fx:id="exportButton" text="📊 Export" styleClass="btn-success"/>
            </HBox>
        </VBox>
    </VBox>

    <!-- Main Content Area -->
    <StackPane VBox.vgrow="ALWAYS">
        
        <!-- User Table -->
        <VBox spacing="8" styleClass="table-container">
            <HBox alignment="CENTER_LEFT" spacing="8">
                <Label text="📋 Danh sách nhân viên" styleClass="table-title"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Label fx:id="resultCountLabel" text="Hiển thị 0 nhân viên" styleClass="status-info"/>
            </HBox>
            
            <!-- *** OPTIMIZED TABLEVIEW - KHÔNG CÓ prefWidth TRONG FXML *** -->
            <TableView fx:id="userTable" styleClass="modern-table" VBox.vgrow="ALWAYS">
                <columns>
                    <!-- Để Java code điều khiển hoàn toàn width -->
                    <TableColumn fx:id="idColumn" text="ID" sortable="true"/>
                    <TableColumn fx:id="usernameColumn" text="👤 Username" sortable="true"/>
                    <TableColumn fx:id="fullNameColumn" text="📝 Họ tên" sortable="true"/>
                    <TableColumn fx:id="emailColumn" text="📧 Email" sortable="true"/>
                    <TableColumn fx:id="phoneColumn" text="📱 SĐT" sortable="true"/>
                    <TableColumn fx:id="roleColumn" text="👨‍💼 Role" sortable="true"/>
                    <TableColumn fx:id="statusColumn" text="📄 Status" sortable="true"/>
                    <TableColumn fx:id="createdAtColumn" text="📅 Ngày tạo" sortable="true"/>
                    <TableColumn fx:id="actionsColumn" text="⚙️ Thao tác" sortable="false"/>
                </columns>
                
                <placeholder>
                    <VBox spacing="12" alignment="CENTER" styleClass="table-placeholder">
                        <Label text="👥" styleClass="placeholder-icon"/>
                        <Label text="Chưa có nhân viên nào" styleClass="placeholder-title"/>
                        <Label text="Nhấn 'Thêm nhân viên' để bắt đầu quản lý đội ngũ" styleClass="placeholder-subtitle"/>
                        <Button text="➕ Thêm nhân viên đầu tiên" styleClass="btn-primary" onAction="#showAddUserForm"/>
                    </VBox>
                </placeholder>
            </TableView>
        </VBox>
        
        <!-- User Form Overlay -->
        <VBox fx:id="userFormOverlay" styleClass="form-overlay" alignment="CENTER" visible="false" managed="false">
            
            <VBox fx:id="userFormSection" spacing="20" styleClass="form-container" prefWidth="550" maxWidth="550">
                
                <!-- Form Header -->
                <HBox alignment="CENTER_LEFT" spacing="12">
                    <Label fx:id="formTitleLabel" text="✨ Thêm nhân viên mới" styleClass="form-title"/>
                    <Region HBox.hgrow="ALWAYS"/>
                    <Button fx:id="closeFormButton" text="✕" styleClass="btn-close" onAction="#hideUserForm"/>
                </HBox>
                
                <!-- Form Content Grid -->
                <GridPane hgap="15" vgap="12" styleClass="form-grid">
                    <columnConstraints>
                        <ColumnConstraints percentWidth="50"/>
                        <ColumnConstraints percentWidth="50"/>
                    </columnConstraints>

                    <!-- Row 1: Full Name & Username -->
                    <VBox spacing="6" GridPane.columnIndex="0" GridPane.rowIndex="0">
                        <Label text="👤 Họ và tên *" styleClass="form-field-label"/>
                        <TextField fx:id="fullNameField" promptText="Nguyễn Văn A..." styleClass="form-field"/>
                    </VBox>
                    
                    <VBox spacing="6" GridPane.columnIndex="1" GridPane.rowIndex="0">
                        <Label text="🏷 Username *" styleClass="form-field-label"/>
                        <TextField fx:id="usernameField" promptText="username..." styleClass="form-field"/>
                    </VBox>

                    <!-- Row 2: Email & Phone -->
                    <VBox spacing="6" GridPane.columnIndex="0" GridPane.rowIndex="1">
                        <Label text="📧 Email *" styleClass="form-field-label"/>
                        <TextField fx:id="emailField" promptText="example@email.com" styleClass="form-field"/>
                    </VBox>
                    
                    <VBox spacing="6" GridPane.columnIndex="1" GridPane.rowIndex="1">
                        <Label text="📱 Số điện thoại *" styleClass="form-field-label"/>
                        <TextField fx:id="phoneField" promptText="0123456789" styleClass="form-field"/>
                    </VBox>

                    <!-- Row 3: Password & Confirm Password -->
                    <VBox spacing="6" GridPane.columnIndex="0" GridPane.rowIndex="2">
                        <Label text="🔐 Mật khẩu *" styleClass="form-field-label"/>
                        <PasswordField fx:id="passwordField" promptText="••••••••" styleClass="form-field"/>
                    </VBox>
                    
                    <VBox spacing="6" GridPane.columnIndex="1" GridPane.rowIndex="2">
                        <Label text="🔐 Xác nhận mật khẩu *" styleClass="form-field-label"/>
                        <PasswordField fx:id="confirmPasswordField" promptText="••••••••" styleClass="form-field"/>
                    </VBox>

                    <!-- Row 4: Role & Status -->
                    <VBox spacing="6" GridPane.columnIndex="0" GridPane.rowIndex="3">
                        <Label text="👨‍💼 Vai trò *" styleClass="form-field-label"/>
                        <ComboBox fx:id="roleCombo" styleClass="form-combo" prefWidth="220"/>
                    </VBox>
                    
                    <VBox spacing="6" GridPane.columnIndex="1" GridPane.rowIndex="3">
                        <Label text="📄 Trạng thái *" styleClass="form-field-label"/>
                        <ComboBox fx:id="statusCombo" styleClass="form-combo" prefWidth="220"/>
                    </VBox>
                </GridPane>
                
                <!-- Form Help Text -->
                <VBox spacing="4" styleClass="help-box">
                    <Label text="💡 Lưu ý quan trọng:" styleClass="help-title"/>
                    <Label text="• Username phải từ 3-50 ký tự, chỉ chứa chữ cái, số và dấu gạch dưới" styleClass="help-text"/>
                    <Label text="• Mật khẩu tối thiểu 6 ký tự, nên kết hợp chữ hoa, thường, số và ký tự đặc biệt" styleClass="help-text"/>
                    <Label text="• Email sẽ được sử dụng để gửi thông báo và khôi phục mật khẩu" styleClass="help-text"/>
                </VBox>
                
                <!-- Form Actions -->
                <HBox spacing="12" alignment="CENTER">
                    <Button fx:id="saveUserButton" text="💾 Lưu thông tin" styleClass="btn-success-large"/>
                    <Button fx:id="cancelButton" text="⌫ Hủy bỏ" styleClass="btn-cancel-large" onAction="#hideFormOverlay"/>
                    <Button fx:id="resetFormButton" text="🔄 Đặt lại" styleClass="btn-warning-large"/>
                </HBox>
            </VBox>
        </VBox>
    </StackPane>

    <!-- Footer Status -->
    <HBox alignment="CENTER_LEFT" spacing="15" styleClass="status-bar">
        <Label fx:id="statusLabel" text="✅ Sẵn sàng" styleClass="status-ready"/>
        <Separator orientation="VERTICAL"/>
        <Label fx:id="lastUpdateLabel" text="Cập nhật lần cuối: Chưa có" styleClass="status-info"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Label text="💡 Double-click để chỉnh sửa | Ctrl+F để tìm kiếm nhanh" styleClass="status-info"/>
    </HBox>
</VBox>