<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<!-- *** UPDATED: Match menu-layout structure and styling *** -->
<BorderPane xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.cafe.controller.admin.AdminUserController"
            stylesheets="@../../css/admin-theme.css,@../../css/menu-style.css"
            styleClass="root-container"
            minHeight="600" prefHeight="800">

    <!-- Top Navigation Bar -->
    <top>
        <HBox styleClass="top-navbar" alignment="CENTER_LEFT" spacing="20">
            <Label text="👥 Quản lý Nhân viên" styleClass="page-title" />
            
            <Region HBox.hgrow="ALWAYS" />
            
            <!-- Search Bar -->
            <HBox spacing="10" alignment="CENTER_LEFT" styleClass="search-container">
                <Label text="🔍" styleClass="search-icon"/>
                <TextField fx:id="searchField" promptText="Tìm theo tên, email, SĐT..." 
                          styleClass="search-field" prefWidth="250"/>
                <Button fx:id="refreshButton" text="🔄" styleClass="icon-button refresh-btn" />
            </HBox>
            
            <Button fx:id="logoutButton" styleClass="logout-button">
                <graphic>
                    <ImageView fitHeight="20" fitWidth="20">
                        <image>
                            <Image url="@../../images/icons/power-icon.png" />
                        </image>
                    </ImageView>
                </graphic>
            </Button>
        </HBox>
    </top>

    <!-- *** UPDATED: Main Content - Use proper sizing *** -->
    <center>
        <HBox spacing="0" styleClass="main-content">
            
            <!-- *** UPDATED: Left Panel - Proper sizing *** -->
            <VBox styleClass="left-panel" HBox.hgrow="ALWAYS">
                
                <!-- Toolbar - Fixed Height -->
                <HBox styleClass="toolbar" spacing="10" alignment="CENTER_LEFT">
                    <Button fx:id="addUserButton" text="➕ Thêm nhân viên" styleClass="primary-button"/>
                    <Button fx:id="editUserButton" text="✏️ Sửa thông tin" styleClass="secondary-button"/>
                    <Button fx:id="deleteUserButton" text="🗑️ Xóa nhân viên" styleClass="danger-button"/>
                    
                    <Region HBox.hgrow="ALWAYS"/>
                    
                    <!-- Role Filter -->
                    <Label text="Vai trò:" styleClass="filter-label"/>
                    <ComboBox fx:id="roleFilterCombo" promptText="Tất cả" 
                             styleClass="category-filter" prefWidth="150"/>
                    
                    <!-- Status Filter -->
                    <Label text="Trạng thái:" styleClass="filter-label"/>
                    <ComboBox fx:id="statusFilterCombo" promptText="Tất cả" 
                             styleClass="status-filter" prefWidth="120"/>
                </HBox>
                
                <!-- *** UPDATED: Users Table - Proper sizing *** -->
                <TableView fx:id="userTable" styleClass="responsive-products-table" 
                           VBox.vgrow="ALWAYS">
                    <columns>
                        <!-- *** UPDATED: No prefWidth specified - Let Java handle sizing *** -->
                        <TableColumn fx:id="idColumn" text="ID" styleClass="id-column"/>
                        <TableColumn fx:id="usernameColumn" text="👤 Username" styleClass="name-column"/>
                        <TableColumn fx:id="fullNameColumn" text="📝 Họ tên" styleClass="name-column"/>
                        <TableColumn fx:id="emailColumn" text="📧 Email" styleClass="name-column"/>
                        <TableColumn fx:id="phoneColumn" text="📱 SĐT" styleClass="name-column"/>
                        <TableColumn fx:id="roleColumn" text="👨‍💼 Role" styleClass="category-column"/>
                        <TableColumn fx:id="statusColumn" text="📄 Status" styleClass="status-column"/>
                        <TableColumn fx:id="createdAtColumn" text="📅 Ngày tạo" styleClass="name-column"/>
                    </columns>
                    
                    <!-- *** PLACEHOLDER for empty table *** -->
                    <placeholder>
                        <VBox spacing="15" alignment="CENTER" styleClass="table-placeholder">
                            <Label text="👥" styleClass="placeholder-icon"/>
                            <Label text="Chưa có nhân viên nào" styleClass="placeholder-title"/>
                            <Label text="Nhấn 'Thêm nhân viên' để bắt đầu quản lý đội ngũ" styleClass="placeholder-subtitle"/>
                            <Button text="➕ Thêm nhân viên đầu tiên" styleClass="primary-button" onAction="#showAddUserDialog"/>
                        </VBox>
                    </placeholder>
                </TableView>
                
                <!-- Table Footer Info - Fixed Height -->
                <HBox styleClass="table-footer" alignment="CENTER_LEFT" spacing="15">
                    <Label fx:id="totalStaffLabel" text="Tổng: 0 nhân viên" styleClass="info-label"/>
                    <Label fx:id="activeStaffLabel" text="Hoạt động: 0 nhân viên" styleClass="info-label"/>
                    <Label fx:id="totalUsersLabel" text="Tổng users: 0" styleClass="info-label"/>
                    <Label fx:id="activeUsersLabel" text="Active: 0" styleClass="info-label"/>
                    <Label fx:id="adminUsersLabel" text="Admin: 0" styleClass="info-label"/>
                    <Label fx:id="staffUsersLabel" text="Staff: 0" styleClass="info-label"/>
                    <Label fx:id="resultCountLabel" text="Hiển thị 0 nhân viên" styleClass="info-label"/>
                    
                    <Region HBox.hgrow="ALWAYS"/>
                    
                    <!-- Pagination -->
                    <HBox spacing="5" alignment="CENTER">
                        <Button fx:id="previousPageButton" text="◀" styleClass="pagination-button"/>
                        <Label fx:id="pageInfoLabel" text="Trang 1/1" styleClass="page-info"/>
                        <Button fx:id="nextPageButton" text="▶" styleClass="pagination-button"/>
                    </HBox>
                </HBox>
                
            </VBox>
            
            <!-- *** UPDATED: Right Panel - Proper sizing *** -->
            <VBox styleClass="right-panel" prefWidth="280" minWidth="250" maxWidth="350">
                
                <!-- Fixed Height Title -->
                <Label text="📋 Thông tin nhân viên" styleClass="panel-title"/>
                
                <!-- *** UPDATED: User Preview - Proper sizing *** -->
                <VBox styleClass="product-preview" spacing="12" VBox.vgrow="ALWAYS">
                    
                    <!-- User Avatar - Fixed Size -->
                    <VBox styleClass="image-container" alignment="CENTER">
                        <ImageView fx:id="userAvatarView" fitHeight="150" fitWidth="200" 
                                  preserveRatio="true" styleClass="product-image">
                            <image>
                                <Image url="@../../images/no-image.png"/>
                            </image>
                        </ImageView>
                        <Button fx:id="changeAvatarButton" text="📷 Đổi ảnh" styleClass="image-button"/>
                    </VBox>
                    
                    <!-- User Details - Flexible -->
                    <VBox styleClass="product-details" spacing="10" VBox.vgrow="ALWAYS">
                        
                        <VBox spacing="4">
                            <Label text="Họ tên:" styleClass="detail-label"/>
                            <Label fx:id="previewFullName" text="Chưa chọn nhân viên" 
                                  styleClass="detail-value name-value"/>
                        </VBox>
                        
                        <HBox spacing="12">
                            <VBox spacing="4" HBox.hgrow="ALWAYS">
                                <Label text="Username:" styleClass="detail-label"/>
                                <Label fx:id="previewUsername" text="-" styleClass="detail-value"/>
                            </VBox>
                            <VBox spacing="4" HBox.hgrow="ALWAYS">
                                <Label text="Vai trò:" styleClass="detail-label"/>
                                <Label fx:id="previewRole" text="-" styleClass="detail-value"/>
                            </VBox>
                        </HBox>
                        
                        <HBox spacing="12">
                            <VBox spacing="4" HBox.hgrow="ALWAYS">
                                <Label text="Email:" styleClass="detail-label"/>
                                <Label fx:id="previewEmail" text="-" 
                                      styleClass="detail-value price-value"/>
                            </VBox>
                            <VBox spacing="4" HBox.hgrow="ALWAYS">
                                <Label text="SĐT:" styleClass="detail-label"/>
                                <Label fx:id="previewPhone" text="-" 
                                      styleClass="detail-value price-value"/>
                            </VBox>
                        </HBox>
                        
                        <VBox spacing="4">
                            <Label text="Trạng thái:" styleClass="detail-label"/>
                            <Label fx:id="previewStatus" text="-" styleClass="detail-value status-value"/>
                        </VBox>
                        
                        <!-- Description - Expandable -->
                        <VBox spacing="4" VBox.vgrow="ALWAYS">
                            <Label text="Ghi chú:" styleClass="detail-label"/>
                            <TextArea fx:id="previewNotes" text="Chưa có ghi chú" 
                                     styleClass="detail-description" 
                                     editable="false" wrapText="true"
                                     VBox.vgrow="ALWAYS"
                                     minHeight="80" prefHeight="120"/>
                        </VBox>
                        
                        <VBox spacing="4">
                            <Label text="Ngày tạo:" styleClass="detail-label"/>
                            <Label fx:id="previewCreatedDate" text="-" styleClass="detail-value"/>
                        </VBox>
                        
                    </VBox>
                    
                    <!-- Quick Actions - Fixed at Bottom -->
                    <VBox styleClass="quick-actions" spacing="6">
                        <Button fx:id="resetPasswordButton" text="🔒 Đổi mật khẩu" 
                               styleClass="secondary-button" maxWidth="Infinity"/>
                        <Button fx:id="toggleStatusButton" text="🔄 Đổi trạng thái" 
                               styleClass="status-toggle-button" maxWidth="Infinity"/>
                    </VBox>
                    
                </VBox>
                
            </VBox>
            
        </HBox>
    </center>

    <!-- User Form Dialog - Hidden by default, created programmatically -->

</BorderPane>