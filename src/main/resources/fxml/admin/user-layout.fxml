<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.cafe.controller.admin.AdminUserController"
      style="-fx-background-color: #f8f9fa;" spacing="20"
      styleClass="main-container">
    
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- Header Section -->
    <VBox spacing="15">
        <HBox alignment="CENTER_LEFT" spacing="15">
            <Label text="👥 Quản lý người dùng" 
                   style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #333;"
                   styleClass="page-title"/>
            <Region HBox.hgrow="ALWAYS"/>
            
            <!-- Quick Stats in Header -->
            <Label fx:id="quickStatsLabel" text="Tổng: 0 | Hoạt động: 0" 
                   style="-fx-font-size: 14px; -fx-text-fill: #666; -fx-font-style: italic;"/>
        </HBox>
        
        <!-- Action Buttons - Enhanced with icons -->
        <HBox spacing="10" alignment="CENTER_LEFT" 
              styleClass="actions-section">
            <Button fx:id="addUserButton" text="➕ Thêm người dùng" 
                    styleClass="btn, btn-primary"
                    style="-fx-font-weight: bold; -fx-padding: 10 20;"/>
            <Button fx:id="importUsersButton" text="📥 Nhập từ Excel" 
                    styleClass="btn, btn-secondary"
                    style="-fx-font-weight: bold; -fx-padding: 10 20;"/>
            <Button fx:id="exportButton" text="📊 Xuất báo cáo" 
                    styleClass="btn, btn-success"
                    style="-fx-font-weight: bold; -fx-padding: 10 20;"/>
            
            <Separator orientation="VERTICAL"/>
            
            <!-- Bulk Actions -->
            <MenuButton fx:id="bulkActionsButton" text="⚙️ Thao tác hàng loạt" 
                        styleClass="btn, btn-secondary"
                        style="-fx-font-weight: bold; -fx-padding: 10 20;">
                <items>
                    <MenuItem fx:id="bulkActivateMenuItem" text="✅ Kích hoạt đã chọn"/>
                    <MenuItem fx:id="bulkDeactivateMenuItem" text="❌ Vô hiệu hóa đã chọn"/>
                    <MenuItem fx:id="bulkDeleteMenuItem" text="🗑️ Xóa đã chọn"/>
                    <MenuItem fx:id="bulkResetPasswordMenuItem" text="🔑 Reset mật khẩu đã chọn"/>
                    <SeparatorMenuItem/>
                    <MenuItem fx:id="bulkExportMenuItem" text="📋 Xuất danh sách đã chọn"/>
                </items>
            </MenuButton>
        </HBox>
    </VBox>

    <!-- Statistics Cards -->
    <HBox spacing="20" alignment="CENTER">
        <VBox styleClass="stats-card, total" spacing="10" alignment="CENTER" prefWidth="200">
            <Label text="👥" style="-fx-font-size: 32px;" styleClass="stats-icon"/>
            <Label text="Tổng người dùng" style="-fx-font-size: 12px; -fx-text-fill: #666;" styleClass="stats-title"/>
            <Label fx:id="totalUsersLabel" text="0" styleClass="stats-value"
                   style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #007bff;"/>
        </VBox>
        
        <VBox styleClass="stats-card, active" spacing="10" alignment="CENTER" prefWidth="200">
            <Label text="✅" style="-fx-font-size: 32px;" styleClass="stats-icon"/>
            <Label text="Đang hoạt động" style="-fx-font-size: 12px; -fx-text-fill: #666;" styleClass="stats-title"/>
            <Label fx:id="activeUsersLabel" text="0" styleClass="stats-value"
                   style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #28a745;"/>
        </VBox>
        
        <VBox styleClass="stats-card, admin" spacing="10" alignment="CENTER" prefWidth="200">
            <Label text="👑" style="-fx-font-size: 32px;" styleClass="stats-icon"/>
            <Label text="Quản trị viên" style="-fx-font-size: 12px; -fx-text-fill: #666;" styleClass="stats-title"/>
            <Label fx:id="adminUsersLabel" text="0" styleClass="stats-value"
                   style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #dc3545;"/>
        </VBox>
        
        <VBox styleClass="stats-card, staff" spacing="10" alignment="CENTER" prefWidth="200">
            <Label text="👨‍💼" style="-fx-font-size: 32px;" styleClass="stats-icon"/>
            <Label text="Nhân viên" style="-fx-font-size: 12px; -fx-text-fill: #666;" styleClass="stats-title"/>
            <Label fx:id="staffUsersLabel" text="0" styleClass="stats-value"
                   style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #ffc107;"/>
        </VBox>
    </HBox>

    <!-- Search and Filter Section -->
    <HBox spacing="15" alignment="CENTER_LEFT" styleClass="search-section">
        <HBox spacing="8" alignment="CENTER_LEFT">
            <Label text="🔍" style="-fx-font-size: 16px;"/>
            <TextField fx:id="searchField" promptText="Tìm kiếm người dùng..." prefWidth="300"
                       styleClass="search-field"
                       style="-fx-padding: 10; -fx-border-radius: 5; -fx-background-radius: 5;"/>
        </HBox>
        
        <VBox spacing="3">
            <Label text="Vai trò:" style="-fx-font-size: 12px; -fx-font-weight: bold;"/>
            <ComboBox fx:id="roleFilterCombo" prefWidth="150" styleClass="form-control"/>
        </VBox>
        
        <VBox spacing="3">
            <Label text="Trạng thái:" style="-fx-font-size: 12px; -fx-font-weight: bold;"/>
            <ComboBox fx:id="statusFilterCombo" prefWidth="150" styleClass="form-control"/>
        </VBox>
        
        <Button fx:id="refreshButton" text="🔄 Làm mới" 
                styleClass="btn, btn-secondary"
                style="-fx-padding: 10 15;"/>
                
        <Region HBox.hgrow="ALWAYS"/>
        
        <!-- Additional filters -->
        <Button fx:id="advancedSearchButton" text="🔧 Tìm kiếm nâng cao" 
                styleClass="btn, btn-warning"
                style="-fx-padding: 10 15;"/>
    </HBox>

    <!-- User Table -->
    <TableView fx:id="userTable" 
               styleClass="table-view"
               VBox.vgrow="ALWAYS">
        <columns>
            <!-- Selection Column -->
            <TableColumn fx:id="selectColumn" text="☑️" prefWidth="40" resizable="false" sortable="false"/>
            
            <!-- Data Columns -->
            <TableColumn fx:id="idColumn" text="ID" prefWidth="60" sortable="true"/>
            <TableColumn fx:id="usernameColumn" text="Tên đăng nhập" prefWidth="120" sortable="true"/>
            <TableColumn fx:id="fullNameColumn" text="Họ tên" prefWidth="150" sortable="true"/>
            <TableColumn fx:id="emailColumn" text="Email" prefWidth="180" sortable="true"/>
            <TableColumn fx:id="phoneColumn" text="Điện thoại" prefWidth="120" sortable="true"/>
            <TableColumn fx:id="roleColumn" text="Vai trò" prefWidth="100" sortable="true"/>
            <TableColumn fx:id="statusColumn" text="Trạng thái" prefWidth="100" sortable="true"/>
            <TableColumn fx:id="createdAtColumn" text="Ngày tạo" prefWidth="120" sortable="true"/>
            <TableColumn fx:id="actionsColumn" text="Thao tác" prefWidth="180" sortable="false"/>
        </columns>
        
        <!-- Table placeholder -->
        <placeholder>
            <VBox spacing="10" alignment="CENTER">
                <Label text="📋" style="-fx-font-size: 48px; -fx-text-fill: #ccc;"/>
                <Label text="Không có dữ liệu người dùng" 
                       style="-fx-font-size: 16px; -fx-text-fill: #999;"/>
                <Label text="Nhấn 'Thêm người dùng' để tạo người dùng mới" 
                       style="-fx-font-size: 12px; -fx-text-fill: #666; -fx-font-style: italic;"/>
            </VBox>
        </placeholder>
    </TableView>

    <!-- User Form Section -->
    <VBox fx:id="userFormSection" spacing="20" managed="false" visible="false"
          styleClass="form-container">
        
        <!-- Form Header -->
        <HBox alignment="CENTER_LEFT" spacing="10">
            <Label text="📝 Thông tin người dùng" styleClass="form-title"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Button fx:id="minimizeFormButton" text="➖" 
                    style="-fx-background-color: #6c757d; -fx-text-fill: white; -fx-padding: 5 10;"/>
        </HBox>
        
        <!-- Form Content -->
        <GridPane hgap="20" vgap="15" styleClass="form-grid">
            <columnConstraints>
                <ColumnConstraints percentWidth="25"/>
                <ColumnConstraints percentWidth="25"/>
                <ColumnConstraints percentWidth="25"/>
                <ColumnConstraints percentWidth="25"/>
            </columnConstraints>

            <!-- Row 1: Basic Info -->
            <VBox spacing="5" GridPane.columnIndex="0" GridPane.rowIndex="0" styleClass="form-group">
                <Label text="Tên đăng nhập:" styleClass="form-label"/>
                <TextField fx:id="usernameField" styleClass="form-control" promptText="username"/>
            </VBox>
            
            <VBox spacing="5" GridPane.columnIndex="1" GridPane.rowIndex="0" styleClass="form-group">
                <Label text="Họ tên:" styleClass="form-label"/>
                <TextField fx:id="fullNameField" styleClass="form-control" promptText="Nguyễn Văn A"/>
            </VBox>
            
            <VBox spacing="5" GridPane.columnIndex="2" GridPane.rowIndex="0" styleClass="form-group">
                <Label text="Email:" styleClass="form-label"/>
                <TextField fx:id="emailField" styleClass="form-control" promptText="user@example.com"/>
            </VBox>
            
            <VBox spacing="5" GridPane.columnIndex="3" GridPane.rowIndex="0" styleClass="form-group">
                <Label text="Điện thoại:" styleClass="form-label"/>
                <TextField fx:id="phoneField" styleClass="form-control" promptText="0123456789"/>
            </VBox>

            <!-- Row 2: Security & Role -->
            <VBox spacing="5" GridPane.columnIndex="0" GridPane.rowIndex="1" styleClass="form-group">
                <Label text="Mật khẩu:" styleClass="form-label"/>
                <PasswordField fx:id="passwordField" styleClass="form-control" promptText="••••••••"/>
            </VBox>
            
            <VBox spacing="5" GridPane.columnIndex="1" GridPane.rowIndex="1" styleClass="form-group">
                <Label text="Xác nhận MK:" styleClass="form-label"/>
                <PasswordField fx:id="confirmPasswordField" styleClass="form-control" promptText="••••••••"/>
            </VBox>
            
            <VBox spacing="5" GridPane.columnIndex="2" GridPane.rowIndex="1" styleClass="form-group">
                <Label text="Vai trò:" styleClass="form-label"/>
                <ComboBox fx:id="roleCombo" styleClass="form-control" prefWidth="200"/>
            </VBox>
            
            <VBox spacing="5" GridPane.columnIndex="3" GridPane.rowIndex="1" styleClass="form-group">
                <Label text="Trạng thái:" styleClass="form-label"/>
                <ComboBox fx:id="statusCombo" styleClass="form-control" prefWidth="200"/>
            </VBox>
        </GridPane>
        
        <!-- Form Actions -->
        <HBox spacing="10" alignment="CENTER_LEFT">
            <Button fx:id="saveUserButton" text="💾 Lưu" 
                    styleClass="btn, btn-primary"
                    style="-fx-font-weight: bold; -fx-padding: 10 20;"/>
            <Button fx:id="cancelButton" text="❌ Hủy" 
                    styleClass="btn, btn-secondary"
                    style="-fx-font-weight: bold; -fx-padding: 10 20;"/>
            <Button fx:id="resetFormButton" text="🔄 Reset Form" 
                    styleClass="btn, btn-warning"
                    style="-fx-font-weight: bold; -fx-padding: 10 20;"/>
                    
            <Region HBox.hgrow="ALWAYS"/>
            
            <!-- Additional actions -->
            <Button fx:id="generatePasswordButton" text="🎲 Tạo mật khẩu" 
                    styleClass="btn, btn-info"
                    style="-fx-font-weight: bold; -fx-padding: 10 20;"/>
            <Button fx:id="sendWelcomeEmailButton" text="📧 Gửi email chào mừng" 
                    styleClass="btn, btn-success"
                    style="-fx-font-weight: bold; -fx-padding: 10 20;"/>
        </HBox>
        
        <!-- Form Help Text -->
        <VBox spacing="5">
            <Label text="💡 Gợi ý:" style="-fx-font-weight: bold; -fx-text-fill: #17a2b8;"/>
            <Label text="• Tên đăng nhập phải có ít nhất 3 ký tự và chỉ chứa chữ cái, số và dấu gạch dưới" 
                   style="-fx-font-size: 11px; -fx-text-fill: #666;"/>
            <Label text="• Mật khẩu phải có ít nhất 6 ký tự. Nên sử dụng mật khẩu mạnh với chữ hoa, số và ký tự đặc biệt" 
                   style="-fx-font-size: 11px; -fx-text-fill: #666;"/>
            <Label text="• Email sẽ được sử dụng để gửi thông báo và khôi phục mật khẩu" 
                   style="-fx-font-size: 11px; -fx-text-fill: #666;"/>
        </VBox>
    </VBox>

    <!-- Footer Info -->
    <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-padding: 10 0;">
        <Label fx:id="footerStatusLabel" text="✅ Sẵn sàng" 
               style="-fx-font-size: 12px; -fx-text-fill: #28a745; -fx-font-weight: bold;"/>
        <Separator orientation="VERTICAL"/>
        <Label fx:id="lastUpdateLabel" text="Cập nhật lần cuối: Chưa có" 
               style="-fx-font-size: 12px; -fx-text-fill: #666;"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Label text="💡 Shift+Click để chọn nhiều | Ctrl+F để tìm kiếm nhanh" 
               style="-fx-font-size: 11px; -fx-text-fill: #999; -fx-font-style: italic;"/>
    </HBox>
</VBox>