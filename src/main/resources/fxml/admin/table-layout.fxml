<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.cafe.controller.admin.AdminTableController"
           styleClass="main-container"
           stylesheets="/css/admin-theme.css,/css/table-layout.css">

    <!-- Top - Toolbar với các nút CRUD và tìm kiếm -->
    <top>
        <VBox spacing="15">
            <padding>
                <Insets top="20" right="20" bottom="10" left="20"/>
            </padding>
            
            <!-- Header Section với stats -->
            <HBox alignment="CENTER_LEFT" spacing="20">
                <Label text="🪑 Quản lý Bàn" styleClass="page-title"/>
                <Region HBox.hgrow="ALWAYS"/>
                
                <!-- Quick Stats -->
                <VBox spacing="3" alignment="CENTER" styleClass="quick-stats">
                    <Label fx:id="totalTablesLabel" text="0" styleClass="stats-number-info"/>
                    <Label text="Tổng bàn" styleClass="stats-label"/>
                </VBox>
                
                <VBox spacing="3" alignment="CENTER" styleClass="quick-stats">
                    <Label fx:id="availableTablesLabel" text="0" styleClass="stats-number-success"/>
                    <Label text="Trống" styleClass="stats-label"/>
                </VBox>
                
                <VBox spacing="3" alignment="CENTER" styleClass="quick-stats">
                    <Label fx:id="occupiedTablesLabel" text="0" styleClass="stats-number-danger"/>
                    <Label text="Đang dùng" styleClass="stats-label"/>
                </VBox>
                
                <VBox spacing="3" alignment="CENTER" styleClass="quick-stats">
                    <Label fx:id="reservedTablesLabel" text="0" styleClass="stats-number-warning"/>
                    <Label text="Đã đặt" styleClass="stats-label"/>
                </VBox>
            </HBox>
            
            <!-- Toolbar -->
            <HBox spacing="15" alignment="CENTER_LEFT" styleClass="toolbar">
                <!-- Action Buttons -->
                <HBox spacing="10" alignment="CENTER_LEFT" styleClass="action-buttons">
                    <Button fx:id="addTableButton" text="➕ Thêm bàn" 
                            onAction="#handleAddTable" styleClass="btn, btn-success"/>
                    <Button fx:id="editTableButton" text="✏️ Sửa bàn" 
                            onAction="#handleEditTable" styleClass="btn, btn-warning" disable="true"/>
                    <Button fx:id="deleteTableButton" text="🗑️ Xóa bàn" 
                            onAction="#handleDeleteTable" styleClass="btn, btn-danger" disable="true"/>
                    <Button fx:id="refreshButton" text="🔄 Làm mới" 
                            onAction="#handleRefresh" styleClass="btn, btn-info"/>
                </HBox>
                
                <Region HBox.hgrow="ALWAYS"/>
                
                <!-- Search and Filter -->
                <HBox spacing="10" alignment="CENTER_RIGHT" styleClass="search-section">
                    <Label text="Khu vực:" styleClass="filter-label"/>
                    <ComboBox fx:id="areaFilterCombo" promptText="Tất cả" 
                             onAction="#handleAreaFilter" styleClass="filter-combo"/>
                    
                    <Label text="Trạng thái:" styleClass="filter-label"/>
                    <ComboBox fx:id="statusFilterCombo" promptText="Tất cả" 
                             onAction="#handleStatusFilter" styleClass="filter-combo"/>
                    
                    <TextField fx:id="searchField" promptText="🔍 Tìm theo tên bàn..." 
                              onKeyReleased="#handleSearch" styleClass="search-field" 
                              prefWidth="200"/>
                </HBox>
            </HBox>
        </VBox>
    </top>

    <!-- Center - TableView hiển thị danh sách bàn -->
    <center>
        <VBox>
            <padding>
                <Insets top="0" right="20" bottom="20" left="20"/>
            </padding>
            
            <ScrollPane fitToWidth="true" fitToHeight="true" styleClass="table-scroll">
                <TableView fx:id="tableView" styleClass="data-table">
                    <columns>
                        <TableColumn fx:id="idColumn" text="ID" prefWidth="60" 
                                   sortable="true" styleClass="id-column"/>
                        <TableColumn fx:id="nameColumn" text="Tên bàn" prefWidth="150" 
                                   sortable="true" styleClass="name-column"/>
                        <TableColumn fx:id="areaColumn" text="Khu vực" prefWidth="120" 
                                   sortable="true" styleClass="area-column"/>
                        <TableColumn fx:id="capacityColumn" text="Sức chứa" prefWidth="100" 
                                   sortable="true" styleClass="capacity-column"/>
                        <TableColumn fx:id="statusColumn" text="Trạng thái" prefWidth="120" 
                                   sortable="true" styleClass="status-column"/>
                        <TableColumn fx:id="activeColumn" text="Hoạt động" prefWidth="100" 
                                   sortable="true" styleClass="active-column"/>
                        <TableColumn fx:id="actionsColumn" text="Thao tác" prefWidth="120" 
                                   sortable="false" styleClass="actions-column"/>
                    </columns>
                    
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                    </columnResizePolicy>
                </TableView>
            </ScrollPane>
        </VBox>
    </center>

    <!-- Bottom - Status bar -->
    <bottom>
        <HBox alignment="CENTER_LEFT" spacing="15" styleClass="status-bar">
            <padding>
                <Insets top="10" right="20" bottom="10" left="20"/>
            </padding>
            
            <Label fx:id="statusLabel" text="Sẵn sàng" styleClass="status-text"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Label fx:id="recordCountLabel" text="0 bàn" styleClass="record-count"/>
        </HBox>
    </bottom>

</BorderPane>