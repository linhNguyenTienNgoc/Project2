<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.cafe.controller.table.TableController"
      style="-fx-background-color: #f8f9fa;" spacing="20">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- Header -->
    <HBox alignment="CENTER_LEFT" spacing="15">
        <Label text="🪑 Quản lý Bàn" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #333;"/>
        <Region HBox.hgrow="ALWAYS"/>
        
        <!-- Quick Actions -->
        <Button fx:id="addTableButton" text="➕ Thêm bàn" 
                style="-fx-background-color: #007bff; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 15; -fx-background-radius: 5;"/>
        <Button fx:id="addAreaButton" text="🏢 Thêm khu vực" 
                style="-fx-background-color: #17a2b8; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 15; -fx-background-radius: 5;"/>
        <Button fx:id="exportTableLayoutButton" text="📊 Xuất sơ đồ" 
                style="-fx-background-color: #28a745; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 15; -fx-background-radius: 5;"/>
        
        <!-- Bulk Actions -->
        <MenuButton fx:id="bulkTableActionsButton" text="🔧 Thao tác hàng loạt" 
                    style="-fx-background-color: #6c757d; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 15; -fx-background-radius: 5;">
            <items>
                <MenuItem fx:id="bulkAvailableTablesMenuItem" text="✅ Đặt trạng thái có sẵn"/>
                <MenuItem fx:id="bulkReserveTablesMenuItem" text="🔒 Đặt trạng thái bận"/>
                <MenuItem fx:id="bulkCleanTablesMenuItem" text="🧹 Đặt trạng thái dọn dẹp"/>
                <MenuItem fx:id="bulkDeleteTablesMenuItem" text="🗑️ Xóa bàn đã chọn"/>
            </items>
        </MenuButton>
    </HBox>

    <!-- Statistics Cards -->
    <HBox spacing="20" alignment="CENTER">
        <VBox style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 5, 0, 0, 2);" 
              spacing="10" alignment="CENTER" prefWidth="200">
            <Label text="🪑" style="-fx-font-size: 32px;"/>
            <Label text="Tổng số bàn" style="-fx-font-size: 12px; -fx-text-fill: #666;"/>
            <Label fx:id="totalTablesLabel" text="0" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #007bff;"/>
        </VBox>
        
        <VBox style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 5, 0, 0, 2);" 
              spacing="10" alignment="CENTER" prefWidth="200">
            <Label text="✅" style="-fx-font-size: 32px;"/>
            <Label text="Bàn trống" style="-fx-font-size: 12px; -fx-text-fill: #666;"/>
            <Label fx:id="availableTablesLabel" text="0" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #28a745;"/>
        </VBox>
        
        <VBox style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 5, 0, 0, 2);" 
              spacing="10" alignment="CENTER" prefWidth="200">
            <Label text="🔒" style="-fx-font-size: 32px;"/>
            <Label text="Bàn đang bận" style="-fx-font-size: 12px; -fx-text-fill: #666;"/>
            <Label fx:id="occupiedTablesLabel" text="0" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #dc3545;"/>
        </VBox>
        
        <VBox style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 5, 0, 0, 2);" 
              spacing="10" alignment="CENTER" prefWidth="200">
            <Label text="🧹" style="-fx-font-size: 32px;"/>
            <Label text="Cần dọn dẹp" style="-fx-font-size: 12px; -fx-text-fill: #666;"/>
            <Label fx:id="cleaningTablesLabel" text="0" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #ffc107;"/>
        </VBox>
    </HBox>

    <!-- Search and Filter -->
    <HBox spacing="15" alignment="CENTER_LEFT" 
          style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 3, 0, 0, 1);">
        <TextField fx:id="searchTableField" promptText="🔍 Tìm kiếm bàn..." prefWidth="300"
                   style="-fx-padding: 10; -fx-border-radius: 5; -fx-background-radius: 5;"/>
        <ComboBox fx:id="areaFilterCombo" promptText="Khu vực" prefWidth="150"/>
        <ComboBox fx:id="statusFilterCombo" promptText="Trạng thái" prefWidth="150"/>
        <Button fx:id="refreshTablesButton" text="🔄 Làm mới" 
                style="-fx-background-color: #6c757d; -fx-text-fill: white; -fx-padding: 10 15; -fx-background-radius: 5;"/>
        <Button fx:id="tableLayoutViewButton" text="🗺️ Xem sơ đồ" 
                style="-fx-background-color: #fd7e14; -fx-text-fill: white; -fx-padding: 10 15; -fx-background-radius: 5;"/>
    </HBox>

    <!-- Table Management -->
    <TableView fx:id="tableList" 
               style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 5, 0, 0, 2);"
               VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="selectTableColumn" text="☑️" prefWidth="40"/>
            <TableColumn fx:id="tableIdColumn" text="Mã bàn" prefWidth="100"/>
            <TableColumn fx:id="tableNameColumn" text="Tên bàn" prefWidth="150"/>
            <TableColumn fx:id="areaColumn" text="Khu vực" prefWidth="120"/>
            <TableColumn fx:id="capacityColumn" text="Sức chứa" prefWidth="100"/>
            <TableColumn fx:id="tableStatusColumn" text="Trạng thái" prefWidth="120"/>
            <TableColumn fx:id="currentOrderColumn" text="Đơn hiện tại" prefWidth="120"/>
            <TableColumn fx:id="lastUpdatedColumn" text="Cập nhật cuối" prefWidth="140"/>
            <TableColumn fx:id="tableActionsColumn" text="Thao tác" prefWidth="180"/>
        </columns>
    </TableView>

    <!-- Table Form -->
    <VBox fx:id="tableFormSection" spacing="15" managed="false" visible="false"
          style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 5, 0, 0, 2);">
        
        <Label text="📝 Thông tin bàn" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #333;"/>
        
        <GridPane hgap="15" vgap="15">
            <columnConstraints>
                <ColumnConstraints percentWidth="25"/>
                <ColumnConstraints percentWidth="25"/>
                <ColumnConstraints percentWidth="25"/>
                <ColumnConstraints percentWidth="25"/>
            </columnConstraints>

            <Label text="Tên bàn:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
            <TextField fx:id="tableNameField" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
            
            <Label text="Khu vực:" GridPane.columnIndex="2" GridPane.rowIndex="0"/>
            <ComboBox fx:id="areaCombo" GridPane.columnIndex="3" GridPane.rowIndex="0"/>
            
            <Label text="Sức chứa:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
            <TextField fx:id="capacityField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
            
            <Label text="Trạng thái:" GridPane.columnIndex="2" GridPane.rowIndex="1"/>
            <ComboBox fx:id="tableStatusCombo" GridPane.columnIndex="3" GridPane.rowIndex="1"/>
            
            <Label text="Vị trí (X,Y):" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
            <HBox spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="2">
                <TextField fx:id="positionXField" promptText="X" prefWidth="60"/>
                <TextField fx:id="positionYField" promptText="Y" prefWidth="60"/>
            </HBox>
            
            <Label text="Ghi chú:" GridPane.columnIndex="2" GridPane.rowIndex="2"/>
            <TextArea fx:id="tableNotesField" prefRowCount="2" GridPane.columnIndex="3" GridPane.rowIndex="2"/>
        </GridPane>
        
        <HBox spacing="10" alignment="CENTER_LEFT">
            <Button fx:id="saveTableButton" text="💾 Lưu bàn" 
                    style="-fx-background-color: #007bff; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 20; -fx-background-radius: 5;"/>
            <Button fx:id="cancelTableButton" text="❌ Hủy" 
                    style="-fx-background-color: #6c757d; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 20; -fx-background-radius: 5;"/>
            <Button fx:id="resetTableFormButton" text="🔄 Reset" 
                    style="-fx-background-color: #ffc107; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 20; -fx-background-radius: 5;"/>
            <Button fx:id="duplicateTableButton" text="📋 Nhân bản" 
                    style="-fx-background-color: #17a2b8; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 20; -fx-background-radius: 5;"/>
            <Button fx:id="moveTableButton" text="↔️ Di chuyển" 
                    style="-fx-background-color: #6f42c1; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 20; -fx-background-radius: 5;"/>
        </HBox>
    </VBox>
</VBox>