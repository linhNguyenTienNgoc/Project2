<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.image.*?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.coffeeshop.shopcoffeemanagement.controller.MenuController" spacing="20">
   <children>
      <HBox alignment="CENTER_LEFT" spacing="20">
         <children>
            <Text fill="#2c3e50" fontSmoothingType="LCD" strokeType="OUTSIDE" strokeWidth="0.0" text="QUẢN LÝ MENU">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
            </Text>
            <Region HBox.hgrow="ALWAYS" />
            <ComboBox fx:id="categoryFilter" promptText="Tất cả danh mục" />
            <TextField fx:id="searchField" promptText="Tìm kiếm món..." prefWidth="200" />
            <Button fx:id="addMenuItemButton" onAction="#showAddMenuItemDialog" styleClass="primary-button" text="Thêm món mới" />
         </children>
         <padding>
            <Insets bottom="10.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </HBox>
      
      <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS">
         <content>
            <GridPane fx:id="menuGrid" styleClass="menu-grid" alignment="TOP_CENTER">
               <!-- Menu items will be added dynamically here -->
            </GridPane>
         </content>
      </ScrollPane>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox> 