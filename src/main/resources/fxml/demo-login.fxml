<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<VBox alignment="CENTER" spacing="20" styleClass="login-container" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.coffeeshop.shopcoffeemanagement.controller.DemoLoginController">
   <children>
      <ImageView fitHeight="80.0" fitWidth="80.0" pickOnBounds="true" preserveRatio="true">
         <VBox.margin>
            <Insets bottom="20.0" />
         </VBox.margin>
      </ImageView>
      <Text styleClass="login-title" text="Coffee Shop Management" />
      <VBox alignment="CENTER" spacing="15" styleClass="login-form">
         <children>
            <TextField fx:id="usernameField" promptText="Tên đăng nhập" styleClass="login-input" />
            <PasswordField fx:id="passwordField" promptText="Mật khẩu" styleClass="login-input" />
            <Button fx:id="loginButton" onAction="#handleLogin" styleClass="login-button" text="Đăng nhập" />
            <Label fx:id="errorLabel" styleClass="error-label" text="Lỗi đăng nhập" visible="false" />
         </children>
      </VBox>
      <VBox alignment="CENTER" spacing="5">
         <children>
            <Text styleClass="demo-info" text="Demo Version - Không cần database" />
            <Text styleClass="demo-accounts" text="Admin: admin/admin123 | Staff: staff1/staff123" />
         </children>
      </VBox>
   </children>
   <padding>
      <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
   </padding>
</VBox> 