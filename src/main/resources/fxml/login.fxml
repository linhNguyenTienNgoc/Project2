<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.Node?>

<VBox alignment="CENTER" spacing="20" styleClass="login-container" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.coffeeshop.shopcoffeemanagement.controller.LoginController" stylesheets="@../css/main.css">
   <children>
      <VBox alignment="CENTER" spacing="10">
         <children>
            <ImageView fx:id="logoImage" fitHeight="80.0" fitWidth="80.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../images/coffee-logo.png" />
               </image>
            </ImageView>
            <Text fill="#2c3e50" fontSmoothingType="LCD" strokeType="OUTSIDE" strokeWidth="0.0" text="QUẢN LÝ QUÁN CÀ PHÊ" wrappingWidth="300">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
            </Text>
         </children>
      </VBox>
      
      <VBox alignment="CENTER" spacing="15" styleClass="login-form">
         <children>
            <TextField fx:id="usernameField" promptText="Tên đăng nhập" styleClass="login-input" />
            <PasswordField fx:id="passwordField" promptText="Mật khẩu" styleClass="login-input" />
            <Button fx:id="loginButton" onAction="#handleLogin" styleClass="login-button" text="Đăng Nhập" />
            <Label fx:id="errorLabel" styleClass="error-label" text="" visible="false" />
         </children>
      </VBox>
      
      <VBox alignment="CENTER" spacing="5">
         <children>
            <Text fill="#7f8c8d" fontSmoothingType="LCD" strokeType="OUTSIDE" strokeWidth="0.0" text="Phiên bản 1.0" wrappingWidth="300">
               <font>
                  <Font size="12.0" />
               </font>
            </Text>
            <Text fill="#7f8c8d" fontSmoothingType="LCD" strokeType="OUTSIDE" strokeWidth="0.0" text="© 2024 Coffee Shop Management" wrappingWidth="300">
               <font>
                  <Font size="10.0" />
               </font>
            </Text>
         </children>
      </VBox>
   </children>
   <padding>
      <Insets bottom="30.0" left="40.0" right="40.0" top="30.0" />
   </padding>
</VBox> 