<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.Node?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.coffeeshop.shopcoffeemanagement.controller.MainController" stylesheets="@../css/main.css">
   <top>
      <HBox styleClass="header" alignment="CENTER_LEFT" spacing="20">
         <children>
            <ImageView fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../images/coffee-icon.png" />
               </image>
            </ImageView>
            <Text fill="WHITE" fontSmoothingType="LCD" strokeType="OUTSIDE" strokeWidth="0.0" text="QUẢN LÝ QUÁN CÀ PHÊ">
               <font>
                  <Font name="System Bold" size="20.0" />
               </font>
            </Text>
            <Region HBox.hgrow="ALWAYS" />
            <Label fx:id="userLabel" styleClass="user-label" text="Nhân viên: " />
            <Button fx:id="logoutButton" onAction="#handleLogout" styleClass="logout-button" text="Đăng xuất" />
         </children>
         <padding>
            <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
         </padding>
      </HBox>
   </top>
   <left>
      <VBox styleClass="sidebar" spacing="5">
         <children>
            <Button fx:id="dashboardButton" onAction="#showDashboard" styleClass="sidebar-button" text="Tổng quan" />
            <Button fx:id="tablesButton" onAction="#showTables" styleClass="sidebar-button" text="Quản lý bàn" />
            <Button fx:id="ordersButton" onAction="#showOrders" styleClass="sidebar-button" text="Đặt hàng" />
            <Button fx:id="menuButton" onAction="#showMenu" styleClass="sidebar-button" text="Quản lý menu" />
            <Button fx:id="invoicesButton" onAction="#showInvoices" styleClass="sidebar-button" text="Hóa đơn" />
            <Button fx:id="reportsButton" onAction="#showReports" styleClass="sidebar-button" text="Báo cáo" />
            <Region VBox.vgrow="ALWAYS" />
            <Button fx:id="settingsButton" onAction="#showSettings" styleClass="sidebar-button" text="Cài đặt" />
            <Button fx:id="adminButton" onAction="#showAdmin" styleClass="sidebar-button" text="Quản trị" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
   </left>
   <center>
      <StackPane fx:id="contentArea" styleClass="content-area">
         <children>
            <VBox alignment="CENTER" spacing="20">
               <children>
                  <ImageView fitHeight="120.0" fitWidth="120.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../images/coffee-logo.png" />
                     </image>
                  </ImageView>
                  <Text fill="#2c3e50" fontSmoothingType="LCD" strokeType="OUTSIDE" strokeWidth="0.0" text="Chào mừng đến với hệ thống quản lý quán cà phê">
                     <font>
                        <Font name="System Bold" size="24.0" />
                     </font>
                  </Text>
                  <Text fill="#7f8c8d" fontSmoothingType="LCD" strokeType="OUTSIDE" strokeWidth="0.0" text="Vui lòng chọn chức năng từ menu bên trái">
                     <font>
                        <Font size="16.0" />
                     </font>
                  </Text>
               </children>
            </VBox>
         </children>
      </StackPane>
   </center>
</BorderPane> 