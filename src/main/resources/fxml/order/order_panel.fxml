<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox fx:id="orderPanel" prefWidth="400" spacing="10"
      xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.cafe.controller.order.OrderPanelController"
      styleClass="order-panel">

    <!-- Order Panel Header -->
    <HBox spacing="10" alignment="CENTER_LEFT"
          styleClass="order-header">
        <Label text="🛒" style="-fx-font-size: 16px;"/>
        <Label text="Đơn hàng hiện tại" styleClass="section-title"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Label fx:id="tableInfoLabel" text="Bàn: --"
               style="-fx-text-fill: #666; -fx-font-size: 12px;"/>
    </HBox>

    <!-- Order Items -->
    <ScrollPane fx:id="orderScrollPane" VBox.vgrow="ALWAYS"
                fitToWidth="true" styleClass="scroll-pane">
        <content>
            <VBox fx:id="orderItemsContainer" spacing="2" style="-fx-padding: 10;">
                <Label text="Chưa có món nào được chọn"
                       style="-fx-text-fill: #999; -fx-font-style: italic; -fx-alignment: center;"/>
            </VBox>
        </content>
    </ScrollPane>

    <!-- Order Summary -->
    <VBox spacing="8" styleClass="order-header">
        <HBox alignment="CENTER_LEFT">
            <Label text="Tổng tiền:" HBox.hgrow="ALWAYS"
                   styleClass="section-title"/>
            <Label fx:id="totalAmountLabel" text="0 VNĐ"
                   styleClass="total-amount"/>
        </HBox>

        <!-- Action Buttons -->
        <HBox spacing="8">
            <Button fx:id="placeOrderButton" text="Đặt món"
                    HBox.hgrow="ALWAYS" styleClass="btn-primary"/>
            <Button fx:id="paymentButton" text="Thanh toán"
                    HBox.hgrow="ALWAYS" styleClass="btn-success"/>
        </HBox>

        <Button fx:id="clearOrderButton" text="Xóa đơn hàng"
                prefWidth="Infinity" styleClass="btn-secondary"/>
    </VBox>

</VBox>
