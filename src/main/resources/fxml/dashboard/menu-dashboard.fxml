<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<HBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="com.cafe.controller.MenuController"
      prefHeight="800.0" prefWidth="1200.0" 
      style="-fx-background-color: #f8f9fa;">
    
    <!-- Left Panel - Menu -->
    <VBox HBox.hgrow="ALWAYS" spacing="10" style="-fx-padding: 15;">
        
        <!-- Top Navigation -->
        <HBox spacing="0" alignment="CENTER_LEFT" styleClass="nav-tabs">
            <Button fx:id="menuTab" text="Menu" styleClass="nav-tab active-tab"/>
            <Button fx:id="tableTab" text="Bàn" styleClass="nav-tab"/>
            <Button fx:id="menuListTab" text="Thực đơn" styleClass="nav-tab"/>
            
            <!-- Power button on the right -->
            <Region HBox.hgrow="ALWAYS"/>
            <Button fx:id="powerButton" styleClass="power-button">
                <graphic>
                    <Label text="⏻" style="-fx-text-fill: white; -fx-font-size: 16px;"/>
                </graphic>
            </Button>
        </HBox>
        
        <!-- Category Bar -->
        <HBox fx:id="categoryBar" spacing="10" alignment="CENTER_LEFT" styleClass="category-bar">
            <!-- Category buttons will be added dynamically -->
        </HBox>
        
        <!-- Search Bar -->
        <HBox spacing="10" alignment="CENTER_LEFT">
            <TextField fx:id="searchField" promptText="Nhập mã/tên món cần tìm" 
                      HBox.hgrow="ALWAYS" styleClass="search-field"/>
            <Button fx:id="searchBtn" text="🔍" styleClass="search-button"/>
        </HBox>
        
        <!-- Product Grid -->
        <ScrollPane fx:id="productScrollPane" VBox.vgrow="ALWAYS" 
                   fitToWidth="true" styleClass="product-scroll">
            <content>
                <VBox fx:id="productContainer" style="-fx-padding: 10;"/>
            </content>
        </ScrollPane>
        
    </VBox>
    
    <!-- Right Panel - Cart -->
    <VBox prefWidth="380" spacing="10" styleClass="cart-panel">
        <padding>
            <Insets top="15" right="15" bottom="15" left="15"/>
        </padding>
        
        <!-- Table Selection -->
        <HBox spacing="10" alignment="CENTER_LEFT">
            <Label text="Bàn 00/Tầng 1" styleClass="table-label"/>
            <TextField fx:id="tableSearchField" promptText="Tìm bàn..." 
                      HBox.hgrow="ALWAYS" styleClass="table-search"/>
        </HBox>
        
        <!-- Cart Header -->
        <HBox spacing="10" alignment="CENTER_LEFT" styleClass="cart-header">
            <Label text="🛒" styleClass="cart-icon"/>
            <Label text="Tên món" HBox.hgrow="ALWAYS" styleClass="cart-header-label"/>
            <Label text="Số lượng" styleClass="cart-header-label"/>
            <Label text="Thành tiền" styleClass="cart-header-label"/>
        </HBox>
        
        <!-- Cart Items -->
        <ScrollPane fx:id="cartScrollPane" VBox.vgrow="ALWAYS" 
                   fitToWidth="true" styleClass="cart-scroll">
            <content>
                <VBox fx:id="orderItemsContainer" spacing="5" style="-fx-padding: 5;"/>
            </content>
        </ScrollPane>
        
        <!-- Cart Summary -->
        <VBox spacing="8" styleClass="cart-summary">
            <HBox alignment="CENTER_LEFT">
                <Label text="ℹ️" styleClass="info-icon"/>
                <Label text="Tổng tiền" HBox.hgrow="ALWAYS" styleClass="total-label"/>
                <Label fx:id="totalAmountLabel" text="341.000 VNĐ" styleClass="total-amount"/>
            </HBox>
            
            <!-- Action Buttons -->
            <HBox spacing="10">
                <Button fx:id="paymentButton" text="Thanh toán" 
                       HBox.hgrow="ALWAYS" styleClass="payment-button"/>
                <Button fx:id="placeOrderButton" text="Đặt món" 
                       HBox.hgrow="ALWAYS" styleClass="order-button"/>
            </HBox>
            
            <Button fx:id="cancelButton" text="Hủy bỏ" 
                   prefWidth="Infinity" styleClass="cancel-button"/>
        </VBox>
        
    </VBox>
    
</HBox>

