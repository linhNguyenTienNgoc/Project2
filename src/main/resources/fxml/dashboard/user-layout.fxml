<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="20" style="-fx-background-color: #f8f9fa;"
      xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.cafe.controller.admin.UserController">

    <padding>
        <Insets top="30" right="30" bottom="30" left="30" />
    </padding>

    <!-- Header -->
    <VBox alignment="CENTER" spacing="10">
        <Label text="👥 QUẢN LÝ NGƯỜI DÙNG" 
               style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2E86AB;" />
        <Label text="Quản lý tài khoản nhân viên và phân quyền" 
               style="-fx-font-size: 14px; -fx-text-fill: #666;" />
    </VBox>

    <!-- Content Area -->
    <VBox spacing="15" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20;">
        
        <!-- Search and Filter -->
        <HBox spacing="15" alignment="CENTER_LEFT">
            <TextField fx:id="searchField" promptText="Tìm kiếm người dùng..." 
                       style="-fx-pref-width: 300;" />
            <ComboBox fx:id="roleFilter" promptText="Vai trò" 
                      style="-fx-pref-width: 150;" />
            <ComboBox fx:id="statusFilter" promptText="Trạng thái" 
                      style="-fx-pref-width: 150;" />
            <Button text="Tìm kiếm" style="-fx-background-color: #2E86AB; -fx-text-fill: white;" />
            <Region HBox.hgrow="ALWAYS" />
            <Button text="+ Thêm người dùng" 
                    style="-fx-background-color: #28a745; -fx-text-fill: white;" />
        </HBox>

        <!-- User List -->
        <TableView fx:id="userTable" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn text="ID" fx:id="userIdColumn" prefWidth="50" />
                <TableColumn text="Tên đăng nhập" fx:id="usernameColumn" prefWidth="120" />
                <TableColumn text="Họ tên" fx:id="fullNameColumn" prefWidth="150" />
                <TableColumn text="Email" fx:id="emailColumn" prefWidth="200" />
                <TableColumn text="Số điện thoại" fx:id="phoneColumn" prefWidth="120" />
                <TableColumn text="Vai trò" fx:id="roleColumn" prefWidth="100" />
                <TableColumn text="Trạng thái" fx:id="statusColumn" prefWidth="100" />
                <TableColumn text="Ngày tạo" fx:id="createdDateColumn" prefWidth="120" />
                <TableColumn text="Thao tác" fx:id="actionColumn" prefWidth="150" />
            </columns>
        </TableView>

        <!-- Pagination -->
        <HBox alignment="CENTER" spacing="10">
            <Button text="← Trước" />
            <Label text="Trang 1 của 3" />
            <Button text="Sau →" />
        </HBox>
    </VBox>

    <!-- Statistics -->
    <HBox spacing="20" alignment="CENTER">
        <VBox alignment="CENTER" style="-fx-background-color: #e3f2fd; -fx-padding: 15; -fx-background-radius: 8;">
            <Label text="12" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #1976d2;" />
            <Label text="Tổng số người dùng" style="-fx-font-size: 12px; -fx-text-fill: #666;" />
        </VBox>
        
        <VBox alignment="CENTER" style="-fx-background-color: #e8f5e8; -fx-padding: 15; -fx-background-radius: 8;">
            <Label text="8" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2e7d32;" />
            <Label text="Đang hoạt động" style="-fx-font-size: 12px; -fx-text-fill: #666;" />
        </VBox>
        
        <VBox alignment="CENTER" style="-fx-background-color: #fff3e0; -fx-padding: 15; -fx-background-radius: 8;">
            <Label text="4" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #f57c00;" />
            <Label text="Vai trò khác nhau" style="-fx-font-size: 12px; -fx-text-fill: #666;" />
        </VBox>
        
        <VBox alignment="CENTER" style="-fx-background-color: #fce4ec; -fx-padding: 15; -fx-background-radius: 8;">
            <Label text="3" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #c2185b;" />
            <Label text="Đăng nhập hôm nay" style="-fx-font-size: 12px; -fx-text-fill: #666;" />
        </VBox>
    </HBox>

</VBox>
