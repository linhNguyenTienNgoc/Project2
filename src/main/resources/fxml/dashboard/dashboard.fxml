<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:id="dashboardContainer"
            fx:controller="com.cafe.controller.dashboard.DashboardController"
            prefHeight="800.0" prefWidth="1200.0"
            styleClass="dashboard-container">

    <!-- Top Navigation Bar -->
    <top>
        <VBox spacing="0">
            <!-- Header Bar -->
            <HBox fx:id="headerBar" spacing="0" alignment="CENTER_LEFT"
                  styleClass="header-bar">
                <Label text="Cafe Management System" styleClass="app-title"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Label fx:id="userNameLabel" text="Người dùng" styleClass="user-name"/>
                <Label fx:id="userRoleLabel" text="Nhân viên" styleClass="user-role"/>
                <Button fx:id="logoutButton" text="Đăng xuất" styleClass="logout-button"/>
            </HBox>

            <!-- Tab Navigation -->
            <HBox fx:id="tabNavigation" spacing="0" alignment="CENTER_LEFT"
                  styleClass="tab-navigation">
                <Button fx:id="overviewTabButton" text="Tổng quan"
                        styleClass="tab-button"/>
                <Button fx:id="menuTabButton" text="Menu"
                        styleClass="tab-button"/>
                <Button fx:id="tableTabButton" text="Bàn"
                        styleClass="tab-button"/>
                <Region HBox.hgrow="ALWAYS"/>
            </HBox>
        </VBox>
    </top>

    <!-- Center Content -->
    <center>
        <HBox prefHeight="800.0" prefWidth="1200.0" spacing="0">

            <!-- Left Content Area (2/3 width) -->
            <StackPane fx:id="contentPane" HBox.hgrow="ALWAYS" styleClass="content-pane">
                <!-- Content will be loaded dynamically here -->
            </StackPane>

            <!-- ✅ RIGHT ORDER PANEL - FIXED INJECTION -->
            <!-- Change fx:id from "orderPanelRoot" to proper controller injection -->
            <fx:include source="/fxml/order/order_panel.fxml"
                        fx:id="orderPanelRoot"/>

        </HBox>
    </center>

</BorderPane>