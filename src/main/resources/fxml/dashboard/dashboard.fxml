<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" 
            fx:id="dashboardContainer"
            fx:controller="com.cafe.controller.dashboard.DashboardController"
            prefHeight="800.0" prefWidth="1200.0" 
            style="-fx-background-color: #f8f9fa;">
    
    <!-- Top Navigation Bar -->
    <top>
        <VBox spacing="0">
            <!-- Header Bar -->
            <HBox fx:id="headerBar" spacing="0" alignment="CENTER_LEFT" 
                  style="-fx-background-color: #2E86AB; -fx-min-height: 50; -fx-padding: 0 20;">
                <Label text="Cafe Management System" style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Label fx:id="userNameLabel" text="Người dùng" style="-fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 0 10;"/>
                <Label fx:id="userRoleLabel" text="Nhân viên" style="-fx-text-fill: white; -fx-font-size: 12px; -fx-padding: 0 10;"/>
                <Button fx:id="logoutButton" text="Đăng xuất" style="-fx-background-color: #dc3545; -fx-text-fill: white; -fx-font-size: 12px; -fx-padding: 8 16; -fx-background-radius: 5;"/>
            </HBox>
            
            <!-- Tab Navigation -->
            <HBox fx:id="tabNavigation" spacing="0" alignment="CENTER_LEFT" 
                  style="-fx-background-color: #8B4513; -fx-min-height: 45;">
                <Button fx:id="menuTabButton" text="Menu" 
                        style="-fx-background-color: #A0522D; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 12 30; -fx-border-width: 0; -fx-min-width: 120;"/>
                <Button fx:id="tableTabButton" text="Bàn" 
                        style="-fx-background-color: #8B4513; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 12 30; -fx-border-width: 0; -fx-min-width: 120;"/>
                <Region HBox.hgrow="ALWAYS"/>
            </HBox>
        </VBox>
    </top>
    
    <!-- Center Content -->
    <center>
        <HBox prefHeight="800.0" prefWidth="1200.0" spacing="0">
            
            <!-- Left Content Area (2/3 width) -->
            <StackPane fx:id="contentPane" HBox.hgrow="ALWAYS" style="-fx-background-color: #f8f9fa;">
                <!-- Content will be loaded dynamically here -->
            </StackPane>
            
            <!-- Right Order Panel (1/3 width) -->
            <VBox fx:id="orderPanel" prefWidth="400" spacing="10" style="-fx-background-color: #f8f9fa; -fx-padding: 15;">
                
                <!-- Order Panel Header -->
                <HBox spacing="10" alignment="CENTER_LEFT" style="-fx-background-color: white; -fx-padding: 10; -fx-background-radius: 8;">
                    <Label text="🛒" style="-fx-font-size: 16px;"/>
                    <Label text="Đơn hàng hiện tại" style="-fx-font-weight: bold; -fx-text-fill: #333;"/>
                    <Region HBox.hgrow="ALWAYS"/>
                    <Label fx:id="tableInfoLabel" text="Bàn: --" style="-fx-text-fill: #666; -fx-font-size: 12px;"/>
                </HBox>
                
                <!-- Order Items -->
                <ScrollPane fx:id="orderScrollPane" VBox.vgrow="ALWAYS" 
                           fitToWidth="true" style="-fx-background-color: white; -fx-background-radius: 8;">
                    <content>
                        <VBox fx:id="orderItemsContainer" spacing="2" style="-fx-padding: 10;">
                            <!-- Order items will be added here dynamically -->
                            <Label text="Chưa có món nào được chọn" style="-fx-text-fill: #999; -fx-font-style: italic; -fx-alignment: center;"/>
                        </VBox>
                    </content>
                </ScrollPane>
                
                <!-- Order Summary -->
                <VBox spacing="8" style="-fx-background-color: white; -fx-padding: 15; -fx-background-radius: 8;">
                    <HBox alignment="CENTER_LEFT">
                        <Label text="Tổng tiền:" HBox.hgrow="ALWAYS" style="-fx-font-weight: bold; -fx-text-fill: #333; -fx-font-size: 14px;"/>
                        <Label fx:id="totalAmountLabel" text="0 VNĐ" style="-fx-font-weight: bold; -fx-text-fill: #E67E22; -fx-font-size: 16px;"/>
                    </HBox>
                    
                    <!-- Action Buttons -->
                    <HBox spacing="8">
                        <Button fx:id="placeOrderButton" text="Đặt món" 
                               HBox.hgrow="ALWAYS" style="-fx-background-color: #007bff; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 12; -fx-background-radius: 5;"/>
                        <Button fx:id="paymentButton" text="Thanh toán" 
                               HBox.hgrow="ALWAYS" style="-fx-background-color: #28a745; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 12; -fx-background-radius: 5;"/>
                    </HBox>
                    
                    <Button fx:id="clearOrderButton" text="Xóa đơn hàng" 
                           prefWidth="Infinity" style="-fx-background-color: #6c757d; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 12; -fx-background-radius: 5;"/>
                </VBox>
                
            </VBox>
            
        </HBox>
    </center>
    
</BorderPane>
